<%- include('../partials/header', { title: 'Payroll Records' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Payroll Records</h1>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" action="/payroll-records" class="row g-3">
        <div class="col-md-3">
          <select class="form-select" name="employee">
            <option value="">All Employees</option>
            <% if (employees && employees.length > 0) { %>
              <% employees.forEach(emp => { %>
                <option value="<%= emp._id %>" <%= employeeFilter === emp._id.toString() ? 'selected' : '' %>>
                  <%= emp.firstName %> <%= emp.lastName %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select" name="payPeriod">
            <option value="">All Pay Periods</option>
            <% if (payPeriods && payPeriods.length > 0) { %>
              <% payPeriods.forEach(pp => { %>
                <option value="<%= pp._id %>" <%= payPeriodFilter === pp._id.toString() ? 'selected' : '' %>>
                  <%= pp.name %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select" name="paymentStatus">
            <option value="">All Statuses</option>
            <option value="unpaid" <%= paymentStatusFilter === 'unpaid' ? 'selected' : '' %>>Unpaid</option>
            <option value="scheduled" <%= paymentStatusFilter === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
            <option value="paid" <%= paymentStatusFilter === 'paid' ? 'selected' : '' %>>Paid</option>
          </select>
        </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Filter
          </button>
        </div>
      </form>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Pay Period</th>
          <th>Regular Hours</th>
          <th>Overtime Hours</th>
          <th>PTO Hours</th>
          <th>Gross Pay</th>
          <th>Payment Status</th>
          <th>Payment Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (payrollRecords && payrollRecords.length > 0) { %>
          <% payrollRecords.forEach(record => { %>
            <tr>
              <td>
                <% if (record.employee) { %>
                  <a href="/employees/<%= record.employee._id %>">
                    <%= record.employee.firstName %> <%= record.employee.lastName %>
                  </a>
                <% } else { %>
                  Unknown
                <% } %>
              </td>
              <td>
                <% if (record.payPeriod) { %>
                  <a href="/pay-periods/<%= record.payPeriod._id %>">
                    <%= record.payPeriod.name %>
                  </a>
                <% } else { %>
                  N/A
                <% } %>
              </td>
              <td><%= (record.totalRegularHours || 0).toFixed(2) %></td>
              <td><%= (record.totalOvertimeHours || 0).toFixed(2) %></td>
              <td><%= (record.totalPTOHours || 0).toFixed(2) %></td>
              <td>$<%= (record.totalGrossPay || 0).toFixed(2) %></td>
              <td>
                <% 
                  let payStatusClass = 'danger';
                  if (record.paymentStatus === 'paid') payStatusClass = 'success';
                  else if (record.paymentStatus === 'scheduled') payStatusClass = 'info';
                %>
                <span class="badge bg-<%= payStatusClass %>"><%= record.paymentStatus %></span>
              </td>
              <td>
                <%= record.paymentDate ? (() => { const d = new Date(record.paymentDate); return (d.getUTCMonth() + 1) + '/' + d.getUTCDate() + '/' + d.getUTCFullYear(); })() : '-' %>
              </td>
              <td>
                <a href="/payroll-records/<%= record._id %>" class="btn btn-sm btn-outline-primary">View</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="9" class="text-center text-muted">No payroll records found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %><%= employeeFilter ? '&employee=' + employeeFilter : '' %><%= payPeriodFilter ? '&payPeriod=' + payPeriodFilter : '' %><%= paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %>">Previous</a>
          </li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %><%= employeeFilter ? '&employee=' + employeeFilter : '' %><%= payPeriodFilter ? '&payPeriod=' + payPeriodFilter : '' %><%= paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %>"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %><%= employeeFilter ? '&employee=' + employeeFilter : '' %><%= payPeriodFilter ? '&payPeriod=' + payPeriodFilter : '' %><%= paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

<%- include('../partials/footer') %>


