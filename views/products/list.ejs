<%- include('../partials/header', { title: 'Products & Services' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Products & Services</h1>
    <a href="/products/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> New Product/Service
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Base Price</th>
          <th>Taxable</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %> <% products.forEach(p => {
        %>
        <tr>
          <td><%= p.name %></td>
          <td>
            <span
              class="badge bg-<%= p.type === 'product' ? 'primary' : 'info' %>"
              ><%= p.type %></span
            >
          </td>
          <td>$<%= (p.basePrice || 0).toFixed(2) %></td>
          <td>
            <% if (p.isTaxable) { %><i
              class="bi bi-check-circle text-success"
            ></i
            ><% } else { %><i class="bi bi-x-circle text-muted"></i><% } %>
          </td>
          <td>
            <span class="badge bg-<%= p.isActive ? 'success' : 'danger' %>"
              ><%= p.isActive ? 'Active' : 'Inactive' %></span
            >
          </td>
          <td>
            <a
              href="/products/<%= p._id %>/edit"
              class="btn btn-sm btn-outline-primary"
              >Edit</a
            >
            <form
              action="/products/<%= p._id %>/delete"
              method="POST"
              class="d-inline"
              onsubmit="return confirm('Delete this product/service?')"
            >
              <button type="submit" class="btn btn-sm btn-outline-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-muted">
            No products or services found
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
