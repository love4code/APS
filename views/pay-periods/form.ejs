<%- include('../partials/header', { title: 'New Pay Period' }) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="h3 mb-4">New Pay Period</h1>

      <form method="POST" action="/pay-periods">
        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="name" class="form-label">Name *</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= payPeriod ? payPeriod.name : '' %>" required placeholder="e.g., Pay Period 2025-01-01 to 2025-01-15">
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="startDate" class="form-label">Start Date *</label>
            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= payPeriod && payPeriod.startDate ? new Date(payPeriod.startDate).toISOString().split('T')[0] : '' %>" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="endDate" class="form-label">End Date *</label>
            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= payPeriod && payPeriod.endDate ? new Date(payPeriod.endDate).toISOString().split('T')[0] : '' %>" required>
          </div>
        </div>

        <div class="mb-3">
          <label for="notes" class="form-label">Notes</label>
          <textarea class="form-control" id="notes" name="notes" rows="3"><%= payPeriod ? (payPeriod.notes || '') : '' %></textarea>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Create Pay Period</button>
          <a href="/pay-periods" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>


