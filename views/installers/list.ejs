<%- include('../partials/header', { title: 'Installers' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Installers</h1>
    <a href="/admin/users/new?type=installer" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Add New Installer
    </a>
  </div>

  <div class="row">
    <% if (installers && installers.length > 0) { %> <%
    installers.forEach(installer => { %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <a
              href="/installers/<%= installer._id %>"
              class="text-decoration-none"
            >
              <%= installer.name %>
            </a>
          </h5>
          <p class="card-text text-muted small mb-3">
            <i class="bi bi-envelope"></i> <%= installer.email %>
          </p>
          <div class="row g-2 mb-3">
            <div class="col-6">
              <div class="border rounded p-2 text-center">
                <div class="h4 mb-0 text-primary">
                  <%= installer.totalJobs || 0 %>
                </div>
                <small class="text-muted">Total Jobs</small>
              </div>
            </div>
            <div class="col-6">
              <div class="border rounded p-2 text-center">
                <div class="h4 mb-0 text-success">
                  <%= installer.completed || 0 %>
                </div>
                <small class="text-muted">Completed</small>
              </div>
            </div>
          </div>
          <div class="row g-2 mb-3">
            <div class="col-4">
              <div class="border rounded p-2 text-center bg-light">
                <div class="h6 mb-0 text-info">
                  <%= installer.scheduled || 0 %>
                </div>
                <small class="text-muted">Scheduled</small>
              </div>
            </div>
            <div class="col-4">
              <div class="border rounded p-2 text-center bg-light">
                <div class="h6 mb-0 text-primary">
                  <%= installer.delivered || 0 %>
                </div>
                <small class="text-muted">Delivered</small>
              </div>
            </div>
            <div class="col-4">
              <div class="border rounded p-2 text-center bg-light">
                <div class="h6 mb-0 text-warning">
                  <%= installer.delayed || 0 %>
                </div>
                <small class="text-muted">Delayed</small>
              </div>
            </div>
          </div>
          <div class="d-flex justify-content-end">
            <a
              href="/installers/<%= installer._id %>"
              class="btn btn-sm btn-outline-primary"
            >
              View Details <i class="bi bi-arrow-right"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } else { %>
    <div class="col-12">
      <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No installers found.
        <a href="/admin/users/new">Add a new user</a> and mark them as an
        installer.
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
