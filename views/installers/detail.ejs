<%- include('../partials/header', { title: 'Installer: ' + (installer.name || 'Unknown') }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Installer: <%= installer.name %></h1>
    <div>
      <% if (installer && installer._id) { %>
      <a
        href="/admin/users/<%= installer._id %>/edit"
        class="btn btn-outline-secondary"
      >
        <i class="bi bi-pencil"></i> Edit User
      </a>
      <% } %>
      <a href="/installers" class="btn btn-secondary">Back to Installers</a>
    </div>
  </div>

  <div class="row">
    <!-- Stats Column -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Job Statistics</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Total Jobs:</span>
              <strong class="text-primary"><%= stats.totalJobs %></strong>
            </div>
            <hr />
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Scheduled:</span>
              <span class="badge bg-info"><%= stats.scheduled %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Completed:</span>
              <span class="badge bg-success"><%= stats.completed %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Delivered:</span>
              <span class="badge bg-primary"><%= stats.delivered %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Undelivered:</span>
              <span class="badge bg-secondary"><%= stats.undelivered %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <span>Delayed:</span>
              <span class="badge bg-warning"><%= stats.delayed %></span>
            </div>
            <hr />
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Paid Jobs:</span>
              <span class="badge bg-success"><%= stats.paidJobs %></span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <span>Unpaid Jobs:</span>
              <span class="badge bg-danger"><%= stats.unpaidJobs %></span>
            </div>
            <hr />
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Total Payments:</span>
              <strong class="text-primary"
                >$<%= (stats.totalPayments || 0).toFixed(2) %></strong
              >
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Payment Count:</span>
              <span class="badge bg-info"><%= stats.paymentCount || 0 %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-header">
          <h5 class="mb-0">Contact Information</h5>
        </div>
        <div class="card-body">
          <p><strong>Email:</strong> <%= installer.email %></p>
          <p>
            <strong>Status:</strong>
            <span
              class="badge bg-<%= installer.isActive ? 'success' : 'danger' %>"
            >
              <%= installer.isActive ? 'Active' : 'Inactive' %>
            </span>
          </p>
        </div>
      </div>
    </div>

    <!-- Jobs Column -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">All Jobs (<%= jobs.length %>)</h5>
        </div>
        <div class="card-body">
          <% if (jobs && jobs.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Install Date</th>
                  <th>Status</th>
                  <th>Sales Rep</th>
                  <th>Total</th>
                  <th>Paid</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% jobs.forEach(job => { %>
                <tr>
                  <td>
                    <a href="/customers/<%= job.customer._id %>">
                      <%= job.customer.name %>
                    </a>
                  </td>
                  <td><%= job.installDate ? new Date(job.installDate).toLocaleDateString() : 'Not scheduled' %></td>
                  <td>
                    <span
                      class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary' %>"
                    >
                      <%= job.status %>
                    </span>
                  </td>
                  <td><%= job.salesRep ? job.salesRep.name : (job.soldByOwner ? 'Owner' : 'N/A') %></td>
                  <td>
                    <strong>$<%= (job.totalPrice || 0).toFixed(2) %></strong>
                  </td>
                  <td>
                    <span
                      class="badge bg-<%= job.isPaid ? 'success' : 'danger' %>"
                    >
                      <%= job.isPaid ? 'Paid' : 'Unpaid' %>
                    </span>
                  </td>
                  <td>
                    <a
                      href="/jobs/<%= job._id %>"
                      class="btn btn-sm btn-outline-primary"
                    >
                      View
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <p class="text-muted">No jobs found for this installer.</p>
          <% } %>
        </div>
      </div>

      <!-- Payments Section -->
      <div class="card mt-4">
        <div
          class="card-header d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">Payments (<%= payments ? payments.length : 0 %>)</h5>
          <a
            href="/payments/new?recipientId=<%= installer._id %>&recipientType=installer"
            class="btn btn-sm btn-primary"
          >
            <i class="bi bi-plus-circle"></i> Record Payment
          </a>
        </div>
        <div class="card-body">
          <% if (payments && payments.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Job</th>
                  <th>Customer</th>
                  <th>Amount</th>
                  <th>Method</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% payments.forEach(payment => { %>
                <tr>
                  <td>
                    <%= new Date(payment.datePaid).toLocaleDateString() %>
                  </td>
                  <td>
                    <a href="/jobs/<%= payment.job._id %>">
                      Job #<%= payment.job._id.toString().slice(-6) %>
                    </a>
                  </td>
                  <td>
                    <% if (payment.job.customer) { %><%= payment.job.customer.name %><% } else { %>N/A<% } %>
                  </td>
                  <td><strong>$<%= payment.amount.toFixed(2) %></strong></td>
                  <td>
                    <span class="badge bg-secondary"><%= payment.paymentMethod.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %></span>
                  </td>
                  <td>
                    <a
                      href="/payments/<%= payment._id %>"
                      class="btn btn-sm btn-outline-primary"
                      >View</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr class="table-primary">
                  <td colspan="3"><strong>Total:</strong></td>
                  <td>
                    <strong
                      >$<%= (stats.totalPayments || 0).toFixed(2) %></strong
                    >
                  </td>
                  <td colspan="2"></td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } else { %>
          <p class="text-muted">No payments recorded for this installer.</p>
          <a
            href="/payments/new?recipientId=<%= installer._id %>&recipientType=installer"
            class="btn btn-sm btn-primary"
          >
            <i class="bi bi-plus-circle"></i> Record First Payment
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
