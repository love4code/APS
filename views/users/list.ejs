<%- include('../partials/header', { title: 'Users' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Users</h1>
    <a href="/admin/users/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> New User
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Sales Rep</th>
          <th>Installer</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %> <% users.forEach(u => { %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td>
            <span
              class="badge bg-<%= u.role === 'admin' ? 'danger' : 'secondary' %>"
              ><%= u.role %></span
            >
          </td>
          <td>
            <% if (u.isSalesRep) { %><i
              class="bi bi-check-circle text-success"
            ></i
            ><% } else { %><i class="bi bi-x-circle text-muted"></i><% } %>
          </td>
          <td>
            <% if (u.isInstaller) { %><i
              class="bi bi-check-circle text-success"
            ></i
            ><% } else { %><i class="bi bi-x-circle text-muted"></i><% } %>
          </td>
          <td>
            <span class="badge bg-<%= u.isActive ? 'success' : 'danger' %>"
              ><%= u.isActive ? 'Active' : 'Inactive' %></span
            >
          </td>
          <td>
            <a
              href="/admin/users/<%= u._id %>/edit"
              class="btn btn-sm btn-outline-primary"
              >Edit</a
            >
            <% if (u.isActive) { %>
            <form
              action="/admin/users/<%= u._id %>/deactivate"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-sm btn-outline-warning"
                onclick="return confirm('Deactivate this user?')"
              >
                Deactivate
              </button>
            </form>
            <% } %>
            <form
              action="/admin/users/<%= u._id %>/delete"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Are you sure you want to permanently delete this user? This action cannot be undone.')"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="7" class="text-center text-muted">No users found</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
