<%- include('../partials/header', { title: 'Job Calendar' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Job Calendar</h1>
    <div>
      <a href="/jobs" class="btn btn-outline-secondary">
        <i class="bi bi-list"></i> View Jobs List
      </a>
    </div>
  </div>

  <!-- Store Legend -->
  <% if (stores && stores.length > 0) { %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">Store Colors</h5>
      <div class="row">
        <% stores.forEach((store, index) => { %>
          <% 
            const colors = [
              '#0d6efd', '#198754', '#dc3545', '#ffc107', '#6f42c1',
              '#fd7e14', '#20c997', '#e83e8c', '#6610f2', '#0dcaf0',
              '#198754', '#ffc107', '#dc3545', '#0d6efd', '#6c757d'
            ]
            const color = colors[index % colors.length]
          %>
          <div class="col-md-3 col-sm-4 col-6 mb-2">
            <div class="d-flex align-items-center">
              <span class="badge me-2" style="background-color: <%= color %>; width: 20px; height: 20px; display: inline-block;"></span>
              <span><%= store.name %></span>
            </div>
          </div>
        <% }) %>
        <div class="col-md-3 col-sm-4 col-6 mb-2">
          <div class="d-flex align-items-center">
            <span class="badge me-2" style="background-color: #6c757d; width: 20px; height: 20px; display: inline-block;"></span>
            <span>No Store</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Calendar -->
  <div class="card">
    <div class="card-body">
      <div id="calendar"></div>
    </div>
  </div>
</div>

<!-- FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet" />

<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const calendarEl = document.getElementById('calendar')
    
    // Detect mobile device
    const isMobile = window.innerWidth <= 768
    
    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: isMobile ? 'listWeek' : 'dayGridMonth',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: isMobile ? 'listWeek,dayGridMonth' : 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
      },
      height: 'auto',
      aspectRatio: isMobile ? 1 : 1.8,
      events: '/jobs/calendar/events',
      eventClick: function(info) {
        // Show job details in a modal
        const jobId = info.event.extendedProps.jobId
        showJobDetailsModal(jobId)
      },
      eventMouseEnter: function(info) {
        // Only show tooltip on non-mobile devices
        if (isMobile) return
        
        // Show tooltip on hover
        const tooltip = document.createElement('div')
        tooltip.className = 'fc-event-tooltip'
        tooltip.style.cssText = 'position: absolute; z-index: 1000; background: #333; color: white; padding: 8px; border-radius: 4px; font-size: 12px; pointer-events: none;'
        tooltip.innerHTML = `
          <strong>${info.event.extendedProps.customer}</strong><br>
          Store: ${info.event.extendedProps.store}<br>
          Installer: ${info.event.extendedProps.installer}<br>
          Sales Rep: ${info.event.extendedProps.salesRep}<br>
          Status: ${info.event.extendedProps.status}<br>
          Total: $${info.event.extendedProps.totalPrice.toFixed(2)}
        `
        document.body.appendChild(tooltip)
        
        const updateTooltip = (e) => {
          tooltip.style.left = e.pageX + 10 + 'px'
          tooltip.style.top = e.pageY + 10 + 'px'
        }
        
        document.addEventListener('mousemove', updateTooltip)
        info.el.addEventListener('mouseleave', () => {
          if (document.body.contains(tooltip)) {
            document.body.removeChild(tooltip)
          }
          document.removeEventListener('mousemove', updateTooltip)
        })
      }
    })
    
    calendar.render()
    
    // Handle window resize
    let resizeTimeout
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout)
      resizeTimeout = setTimeout(function() {
        calendar.updateSize()
      }, 250)
    })
  })

  // Function to show job details modal
  function showJobDetailsModal(jobId) {
    // Fetch job details
    fetch('/jobs/' + jobId + '/details')
      .then(response => response.json())
      .then(job => {
        // Build modal HTML
        let itemsHtml = ''
        if (job.items && job.items.length > 0) {
          itemsHtml = '<table class="table table-sm table-bordered">' +
            '<thead><tr><th>Product/Service</th><th>Qty</th><th>Unit Price</th><th>Taxable</th><th>Item Total</th><th>Tax</th></tr></thead>' +
            '<tbody>'
          job.items.forEach(item => {
            itemsHtml += '<tr>' +
              '<td>' + item.product + '</td>' +
              '<td>' + item.quantity + '</td>' +
              '<td>$' + item.unitPrice.toFixed(2) + '</td>' +
              '<td>' + (item.isTaxable ? '<i class="bi bi-check-circle text-success"></i> Yes' : '<i class="bi bi-x-circle text-muted"></i> No') + '</td>' +
              '<td>$' + item.itemTotal.toFixed(2) + '</td>' +
              '<td>' + (item.isTaxable ? '<span class="text-success">$' + item.itemTax.toFixed(2) + '</span>' : '$0.00') + '</td>' +
              '</tr>'
          })
          itemsHtml += '</tbody></table>'
        } else {
          itemsHtml = '<p class="text-muted">No items</p>'
        }

        const modalHtml = `
          <div class="modal fade" id="jobDetailsModal" tabindex="-1" aria-labelledby="jobDetailsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="jobDetailsModalLabel">Job Details #${job.id.slice(-6)}</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <h6>Customer Information</h6>
                      <p><strong>Name:</strong> ${job.customer ? job.customer.name : 'N/A'}</p>
                      <p><strong>Phone:</strong> ${job.customer ? job.customer.phone : 'N/A'}</p>
                      <p><strong>Email:</strong> ${job.customer ? job.customer.email : 'N/A'}</p>
                      <p><strong>Address:</strong> ${job.customer ? job.customer.address : 'N/A'}</p>
                    </div>
                    <div class="col-md-6">
                      <h6>Job Information</h6>
                      <p><strong>Status:</strong> <span class="badge bg-${job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary'}">${job.status}</span></p>
                      <p><strong>Sold By:</strong> ${job.soldByOwner ? 'Owner' : (job.salesRep ? job.salesRep.name : 'N/A')}</p>
                      <p><strong>Sales Rep:</strong> ${job.salesRep ? job.salesRep.name + ' (' + job.salesRep.email + ')' : 'N/A'}</p>
                      <p><strong>Installer:</strong> ${job.installer ? job.installer.name + ' (' + job.installer.email + ')' : 'Not assigned'}</p>
                      <p><strong>Store:</strong> ${job.store}</p>
                      <p><strong>Install Date:</strong> ${job.installDate}</p>
                      <p><strong>Created:</strong> ${job.createdAt}</p>
                    </div>
                  </div>
                  <div class="mb-3">
                    <h6>Items</h6>
                    ${itemsHtml}
                  </div>
                  <div class="row">
                    <div class="col-md-6 offset-md-6">
                      <table class="table table-sm">
                        <tr>
                          <td><strong>Subtotal:</strong></td>
                          <td class="text-end">$${job.subtotal.toFixed(2)}</td>
                        </tr>
                        ${job.taxTotal > 0 ? '<tr><td><strong>Tax (6.25%):</strong></td><td class="text-end">$' + job.taxTotal.toFixed(2) + '</td></tr>' : ''}
                        ${job.installCost > 0 ? '<tr><td><strong>Install Cost:</strong></td><td class="text-end">$' + job.installCost.toFixed(2) + '</td></tr>' : ''}
                        <tr class="table-primary">
                          <td><strong>Total:</strong></td>
                          <td class="text-end"><strong>$${job.totalPrice.toFixed(2)}</strong></td>
                        </tr>
                        <tr>
                          <td><strong>Payment Status:</strong></td>
                          <td class="text-end"><span class="badge bg-${job.isPaid ? 'success' : 'danger'}">${job.isPaid ? 'PAID' : 'UNPAID'}</span></td>
                        </tr>
                      </table>
                    </div>
                  </div>
                  ${job.notes ? '<div class="mt-3"><h6>Notes</h6><p class="text-muted">' + job.notes + '</p></div>' : ''}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        `
        
        // Remove existing modal if any
        const existingModal = document.getElementById('jobDetailsModal')
        if (existingModal) {
          existingModal.remove()
        }
        
        // Add modal to body
        document.body.insertAdjacentHTML('beforeend', modalHtml)
        
        // Show modal
        const modal = new bootstrap.Modal(document.getElementById('jobDetailsModal'))
        modal.show()
        
        // Clean up when modal is hidden
        document.getElementById('jobDetailsModal').addEventListener('hidden.bs.modal', function() {
          this.remove()
        })
      })
      .catch(error => {
        console.error('Error loading job details:', error)
        alert('Error loading job details. Please try again.')
      })
  }
</script>

<style>
  .fc-event {
    cursor: pointer;
  }
  
  .fc-event:hover {
    opacity: 0.8;
  }
  
  .fc-toolbar-title {
    font-size: 1.5rem;
  }
  
  /* Mobile-specific calendar styles */
  @media (max-width: 768px) {
    #calendar {
      width: 100%;
      overflow-x: auto;
    }
    
    .fc {
      font-size: 0.875rem;
    }
    
    .fc-toolbar {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .fc-toolbar-chunk {
      display: flex;
      justify-content: center;
      width: 100%;
    }
    
    .fc-toolbar-title {
      font-size: 1.125rem;
      margin: 0.5rem 0;
    }
    
    .fc-button {
      padding: 0.375rem 0.5rem;
      font-size: 0.75rem;
    }
    
    .fc-button-group .fc-button {
      padding: 0.375rem 0.5rem;
      font-size: 0.75rem;
    }
    
    .fc-daygrid-day {
      min-height: 60px;
    }
    
    .fc-daygrid-day-number {
      padding: 2px 4px;
      font-size: 0.75rem;
    }
    
    .fc-event {
      font-size: 0.7rem;
      padding: 1px 2px;
      margin: 1px 0;
    }
    
    .fc-event-title {
      font-size: 0.7rem;
    }
    
    .fc-list-event {
      font-size: 0.875rem;
    }
    
    .fc-list-event-title {
      font-size: 0.875rem;
    }
    
    /* Ensure calendar container doesn't overflow */
    .card-body {
      padding: 0.75rem;
      overflow-x: auto;
    }
    
    /* Make header buttons stack on mobile */
    .fc-header-toolbar {
      flex-wrap: wrap;
    }
    
    .fc-toolbar-chunk:first-child,
    .fc-toolbar-chunk:last-child {
      order: 2;
    }
    
    .fc-toolbar-chunk:nth-child(2) {
      order: 1;
      width: 100%;
    }
  }
  
  @media (max-width: 576px) {
    .fc-toolbar-title {
      font-size: 1rem;
    }
    
    .fc-button {
      padding: 0.25rem 0.375rem;
      font-size: 0.6875rem;
    }
    
    .fc-daygrid-day {
      min-height: 50px;
    }
    
    .fc-event {
      font-size: 0.65rem;
    }
  }
</style>

