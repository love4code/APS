<%- include('../partials/header', { title: title }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><%= title %></h1>
    <div class="d-flex gap-2">
      <a href="/jobs/<%= job._id %>" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Back to Job
      </a>
      <a href="/jobs" class="btn btn-outline-secondary">
        <i class="bi bi-list"></i> All Jobs
      </a>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Job Information</h5>
      <p><strong>Customer:</strong> <a href="/customers/<%= job.customer._id %>"><%= job.customer.name %></a></p>
      <p><strong>Job ID:</strong> <%= job._id.toString().slice(-6) %></p>
      <p><strong>Status:</strong> 
        <span class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary' %>">
          <%= job.status %>
        </span>
      </p>
      <p><strong>Total Images:</strong> <%= images ? images.length : 0 %></p>
    </div>
  </div>

  <% if (images && images.length > 0) { %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Image Library</h5>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Thumbnail</th>
              <th>Original Filename</th>
              <th>Uploaded By</th>
              <th>Upload Date</th>
              <th>File Sizes</th>
              <th>Links</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% images.forEach(image => { %>
            <tr>
              <td>
                <img src="/<%= image.thumbnailPath %>" alt="<%= image.originalFilename %>" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px;">
              </td>
              <td>
                <strong><%= image.originalFilename %></strong>
              </td>
              <td>
                <%= image.uploadedBy ? image.uploadedBy.name : 'Unknown' %>
              </td>
              <td>
                <%= new Date(image.uploadedAt).toLocaleDateString() %><br>
                <small class="text-muted"><%= new Date(image.uploadedAt).toLocaleTimeString() %></small>
              </td>
              <td>
                <small>
                  <strong>Original:</strong> <%= (image.originalSize / 1024).toFixed(2) %> KB<br>
                  <strong>Thumbnail:</strong> <%= (image.thumbnailSize / 1024).toFixed(2) %> KB<br>
                  <strong>Medium:</strong> <%= (image.mediumSize / 1024).toFixed(2) %> KB<br>
                  <strong>Large:</strong> <%= (image.largeSize / 1024).toFixed(2) %> KB
                </small>
              </td>
              <td>
                <div class="btn-group-vertical btn-group-sm" role="group">
                  <a href="/<%= image.thumbnailPath %>" target="_blank" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-image"></i> Thumbnail (200x200)
                  </a>
                  <a href="/<%= image.mediumPath %>" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-image"></i> Medium (800x800)
                  </a>
                  <a href="/<%= image.largePath %>" target="_blank" class="btn btn-outline-info btn-sm">
                    <i class="bi bi-image"></i> Large (1920x1920)
                  </a>
                </div>
              </td>
              <td>
                <form action="/jobs/<%= job._id %>/images/<%= image._id %>/delete?from=library" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image? This action cannot be undone.');">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Image Gallery Preview</h5>
      <div class="row g-3">
        <% images.forEach(image => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card">
            <a href="/<%= image.mediumPath %>" class="lightbox-link" data-medium="/<%= image.mediumPath %>" data-large="/<%= image.largePath %>">
              <img src="/<%= image.thumbnailPath %>" class="card-img-top" alt="<%= image.originalFilename %>" style="height: 200px; object-fit: cover; cursor: pointer;">
            </a>
            <div class="card-body p-2">
              <p class="card-text small mb-0 text-truncate" title="<%= image.originalFilename %>">
                <%= image.originalFilename %>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No images have been uploaded for this job yet.
    <a href="/jobs/<%= job._id %>" class="alert-link">Go to job details to upload images</a>
  </div>
  <% } %>
</div>

<!-- Lightbox Modal -->
<div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark">
      <div class="modal-header border-secondary">
        <h5 class="modal-title text-white" id="lightboxTitle">Image</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <img id="lightboxImage" src="" alt="" class="img-fluid w-100" style="max-height: 80vh; object-fit: contain;">
      </div>
      <div class="modal-footer border-secondary">
        <a id="lightboxDownloadLink" href="" target="_blank" class="btn btn-outline-light">
          <i class="bi bi-download"></i> View Full Size
        </a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<style>
  .lightbox-link {
    text-decoration: none;
    display: block;
  }
  .lightbox-link:hover {
    opacity: 0.9;
  }
  .card {
    transition: transform 0.2s;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
</style>

<script>
  // Lightbox functionality
  document.addEventListener('DOMContentLoaded', function() {
    const lightboxLinks = document.querySelectorAll('.lightbox-link');
    const lightboxModal = new bootstrap.Modal(document.getElementById('lightboxModal'));
    const lightboxImage = document.getElementById('lightboxImage');
    const lightboxTitle = document.getElementById('lightboxTitle');
    const lightboxDownloadLink = document.getElementById('lightboxDownloadLink');

    lightboxLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const mediumPath = this.getAttribute('data-medium');
        const largePath = this.getAttribute('data-large');
        const altText = this.querySelector('img').alt;

        lightboxImage.src = mediumPath;
        lightboxImage.alt = altText;
        lightboxTitle.textContent = altText;
        lightboxDownloadLink.href = largePath;

        lightboxModal.show();
      });
    });

    // Close lightbox on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        lightboxModal.hide();
      }
    });
  });
</script>

<%- include('../partials/footer') %>

