<%- include('../partials/header', { title: title }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><%= title %></h1>
    <div class="d-flex gap-2">
      <a href="/jobs/<%= job._id %>" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Back to Job
      </a>
      <a href="/jobs" class="btn btn-outline-secondary">
        <i class="bi bi-list"></i> All Jobs
      </a>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Job Information</h5>
      <p><strong>Customer:</strong> <a href="/customers/<%= job.customer._id %>"><%= job.customer.name %></a></p>
      <p><strong>Job ID:</strong> <%= job._id.toString().slice(-6) %></p>
      <p><strong>Status:</strong> 
        <span class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary' %>">
          <%= job.status %>
        </span>
      </p>
      <p><strong>Total Images:</strong> <%= images ? images.length : 0 %></p>
    </div>
  </div>

  <% if (images && images.length > 0) { %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Image Library</h5>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Thumbnail</th>
              <th>Original Filename</th>
              <th>Uploaded By</th>
              <th>Upload Date</th>
              <th>File Sizes</th>
              <th>Links</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% images.forEach(image => { %>
            <tr>
              <% 
                // Normalize paths - ensure they start with / for proper URL construction
                function normalizePath(path) {
                  if (!path) return '';
                  let p = String(path).trim();
                  p = p.replace(/^\/+/, '');
                  return '/' + p;
                }
                const thumbPath = normalizePath(image.thumbnailPath || '');
                const mediumPath = normalizePath(image.mediumPath || '');
                const largePath = normalizePath(image.largePath || '');
              %>
              <td>
                <img src="<%= mediumPath %>" alt="<%= image.originalFilename %>" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px; image-rendering: -webkit-optimize-contrast;" onerror="console.error('Image failed to load:', this.src); this.style.backgroundColor='#f0f0f0'; this.alt='Image not found';">
              </td>
              <td>
                <strong><%= image.originalFilename %></strong>
              </td>
              <td>
                <%= image.uploadedBy ? image.uploadedBy.name : 'Unknown' %>
              </td>
              <td>
                <%= new Date(image.uploadedAt).toLocaleDateString() %><br>
                <small class="text-muted"><%= new Date(image.uploadedAt).toLocaleTimeString() %></small>
              </td>
              <td>
                <small>
                  <strong>Original:</strong> <%= (image.originalSize / 1024).toFixed(2) %> KB<br>
                  <strong>Thumbnail:</strong> <%= (image.thumbnailSize / 1024).toFixed(2) %> KB<br>
                  <strong>Medium:</strong> <%= (image.mediumSize / 1024).toFixed(2) %> KB<br>
                  <strong>Large:</strong> <%= (image.largeSize / 1024).toFixed(2) %> KB
                </small>
              </td>
              <td>
                <div class="btn-group-vertical btn-group-sm" role="group">
                  <a href="<%= thumbPath %>" target="_blank" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-image"></i> Thumbnail (200x200)
                  </a>
                  <a href="<%= mediumPath %>" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-image"></i> Medium (800x800)
                  </a>
                  <a href="<%= largePath %>" target="_blank" class="btn btn-outline-info btn-sm">
                    <i class="bi bi-image"></i> Large (1920x1920)
                  </a>
                </div>
              </td>
              <td>
                <form action="/jobs/<%= job._id %>/images/<%= image._id %>/delete?from=library" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image? This action cannot be undone.');">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Image Gallery Preview</h5>
      <div class="row g-3">
        <% images.forEach(image => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card">
            <% 
              // Normalize paths - ensure they start with / for proper URL construction
              function normalizePath(path) {
                if (!path) return '';
                let p = String(path).trim();
                p = p.replace(/^\/+/, '');
                return '/' + p;
              }
              const thumbPath = normalizePath(image.thumbnailPath || '');
              const mediumPath = normalizePath(image.mediumPath || '');
              const largePath = normalizePath(image.largePath || '');
            %>
            <a href="<%= mediumPath %>" class="lightbox-link" data-medium="<%= mediumPath %>" data-large="<%= largePath %>">
              <img src="<%= mediumPath %>" class="card-img-top thumbnail-img" alt="<%= image.originalFilename %>" onerror="console.error('Image failed to load:', this.src); this.style.backgroundColor='#f0f0f0'; this.alt='Image not found';">
            </a>
            <div class="card-body p-2">
              <p class="card-text small mb-0 text-truncate" title="<%= image.originalFilename %>">
                <%= image.originalFilename %>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No images have been uploaded for this job yet.
    <a href="/jobs/<%= job._id %>" class="alert-link">Go to job details to upload images</a>
  </div>
  <% } %>
</div>

<!-- Lightbox Modal -->
<div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark">
      <div class="modal-header border-secondary">
        <h5 class="modal-title text-white" id="lightboxTitle">Image</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <img id="lightboxImage" src="" alt="" class="img-fluid w-100" style="max-height: 80vh; object-fit: contain;">
      </div>
      <div class="modal-footer border-secondary">
        <a id="lightboxDownloadLink" href="" target="_blank" class="btn btn-outline-light">
          <i class="bi bi-download"></i> View Full Size
        </a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<style>
  .lightbox-link {
    text-decoration: none;
    display: block;
  }
  .lightbox-link:hover {
    opacity: 0.9;
  }
  .card {
    transition: transform 0.2s;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  /* Use medium images as thumbnails with CSS resizing for better quality */
  .thumbnail-img {
    height: 200px;
    width: 100%;
    object-fit: cover;
    cursor: pointer;
    image-rendering: -webkit-optimize-contrast; /* Better quality when scaling down */
    image-rendering: crisp-edges;
  }
  
  /* Ensure lightbox modal appears above all content */
  #lightboxModal {
    z-index: 10060 !important;
  }
  #lightboxModal.show {
    display: block !important;
  }
  /* Ensure backdrop is BELOW modal */
  body.modal-open .modal-backdrop {
    z-index: 10050 !important;
    background-color: rgba(0, 0, 0, 0.75) !important;
  }
  /* Force modal to be on top */
  #lightboxModal.modal.show {
    z-index: 10060 !important;
  }
  
  /* Mobile-specific lightbox fixes */
  @media (max-width: 767.98px) {
    #lightboxModal {
      z-index: 10070 !important;
    }
    #lightboxModal .modal-dialog {
      z-index: 10071 !important;
      position: relative !important;
      margin: 0.5rem !important;
      max-width: calc(100% - 1rem) !important;
    }
    #lightboxModal .modal-content {
      z-index: 10072 !important;
      position: relative !important;
      pointer-events: auto !important;
    }
    body.modal-open .modal-backdrop {
      z-index: 10050 !important;
      pointer-events: auto !important;
    }
    /* Prevent body scroll when modal is open on mobile */
    body.modal-open {
      overflow: hidden !important;
      position: fixed !important;
      width: 100% !important;
    }
  }
</style>

<script>
  // Lightbox functionality - initialize after DOM and Bootstrap are ready
  let lightboxInitialized = false;
  let lightboxModal = null;
  
  function initLightbox() {
    // Prevent multiple initializations
    if (lightboxInitialized) {
      return;
    }

    // Wait for Bootstrap to be available
    if (typeof bootstrap === 'undefined' || !bootstrap.Modal) {
      setTimeout(initLightbox, 100);
      return;
    }

    const lightboxModalEl = document.getElementById('lightboxModal');
    if (!lightboxModalEl) {
      console.warn('Lightbox modal element not found');
      return;
    }

    // Initialize Bootstrap modal with backdrop click enabled
    try {
      lightboxModal = bootstrap.Modal.getOrCreateInstance(lightboxModalEl, {
        backdrop: true,
        keyboard: true,
        focus: true
      });
    } catch (e) {
      console.error('Error initializing Bootstrap modal:', e);
      try {
        lightboxModal = new bootstrap.Modal(lightboxModalEl, {
          backdrop: true,
          keyboard: true,
          focus: true
        });
      } catch (e2) {
        console.error('Failed to create Bootstrap modal:', e2);
        return;
      }
    }

    const lightboxImage = document.getElementById('lightboxImage');
    const lightboxTitle = document.getElementById('lightboxTitle');
    const lightboxDownloadLink = document.getElementById('lightboxDownloadLink');

    if (!lightboxImage || !lightboxTitle || !lightboxDownloadLink) {
      console.warn('Lightbox elements not found');
      return;
    }

    // Function to open lightbox
    function openLightbox(lightboxLink) {
      if (!lightboxModal) return;
      
      const mediumPath = lightboxLink.getAttribute('data-medium');
      const largePath = lightboxLink.getAttribute('data-large');
      const img = lightboxLink.querySelector('img');
      const altText = img ? img.alt : 'Image';

      if (mediumPath && largePath) {
        lightboxImage.src = mediumPath;
        lightboxImage.alt = altText;
        lightboxTitle.textContent = altText;
        lightboxDownloadLink.href = largePath;

        // Show modal
        try {
          lightboxModal.show();
          
          // Mobile-specific fixes after modal is shown
          setTimeout(() => {
            // Ensure modal is on top on mobile
            if (window.innerWidth <= 767.98) {
              const backdrops = document.querySelectorAll('.modal-backdrop');
              backdrops.forEach(backdrop => {
                backdrop.style.zIndex = '10050';
                backdrop.style.pointerEvents = 'auto';
              });
              
              const modalDialog = lightboxModalEl.querySelector('.modal-dialog');
              const modalContent = lightboxModalEl.querySelector('.modal-content');
              
              if (modalDialog) {
                modalDialog.style.zIndex = '10071';
                modalDialog.style.position = 'relative';
              }
              
              if (modalContent) {
                modalContent.style.zIndex = '10072';
                modalContent.style.position = 'relative';
                modalContent.style.pointerEvents = 'auto';
              }
              
              lightboxModalEl.style.zIndex = '10070';
            }
          }, 150);
        } catch (err) {
          console.error('Error showing lightbox modal:', err);
        }
      }
    }

    // Handle clicks on lightbox links (use event delegation - only attach once)
    // Support both click and touch events for mobile
    document.addEventListener('click', function lightboxClickHandler(e) {
      const lightboxLink = e.target.closest('.lightbox-link');
      if (lightboxLink && lightboxModal) {
        e.preventDefault();
        e.stopPropagation();
        openLightbox(lightboxLink);
      }
    });
    
    // Handle touch events for mobile
    document.addEventListener('touchend', function lightboxTouchHandler(e) {
      const lightboxLink = e.target.closest('.lightbox-link');
      if (lightboxLink && lightboxModal) {
        e.preventDefault();
        e.stopPropagation();
        openLightbox(lightboxLink);
      }
    }, { passive: false });

    // Function to close lightbox
    function closeLightbox() {
      if (lightboxModal) {
        try {
          lightboxModal.hide();
        } catch (err) {
          console.error('Error hiding lightbox modal:', err);
        }
      }
    }

    // Ensure escape key works
    document.addEventListener('keydown', function escapeHandler(e) {
      if (e.key === 'Escape' && lightboxModalEl.classList.contains('show') && lightboxModal) {
        closeLightbox();
      }
    });

    // Prevent modal content clicks from closing the modal
    const modalContent = lightboxModalEl.querySelector('.modal-content');
    if (modalContent) {
      modalContent.addEventListener('click', function(e) {
        e.stopPropagation();
      });
    }

    // Explicitly handle backdrop clicks (both click and touch for mobile)
    lightboxModalEl.addEventListener('click', function(e) {
      // Only close if clicking directly on the modal element (backdrop area)
      if (e.target === lightboxModalEl && lightboxModal) {
        e.preventDefault();
        e.stopPropagation();
        closeLightbox();
      }
    });
    
    // Handle touch events on backdrop for mobile
    lightboxModalEl.addEventListener('touchend', function(e) {
      if (e.target === lightboxModalEl && lightboxModal) {
        e.preventDefault();
        e.stopPropagation();
        closeLightbox();
      }
    }, { passive: false });

    // Also handle backdrop element clicks (Bootstrap creates this)
    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('modal-backdrop') && 
          lightboxModalEl.classList.contains('show') && lightboxModal) {
        closeLightbox();
      }
    });
    
    // Handle touch events on Bootstrap backdrop for mobile
    document.addEventListener('touchend', function(e) {
      if (e.target.classList.contains('modal-backdrop') && 
          lightboxModalEl.classList.contains('show') && lightboxModal) {
        e.preventDefault();
        closeLightbox();
      }
    }, { passive: false });

    lightboxInitialized = true;
  }

  // Initialize lightbox when DOM is ready, but wait for Bootstrap
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(initLightbox, 100);
    });
  } else {
    setTimeout(initLightbox, 100);
  }

  // Also try after a short delay to ensure Bootstrap is loaded
  setTimeout(initLightbox, 500);
</script>

