      }
      
      // Re-attach after potential DOM updates (e.g., after image upload)
      setTimeout(initLightboxSystem, 1000);
      setTimeout(initLightboxSystem, 2000);

      // Enhanced close handlers for mobile - setup function
      function setupCloseHandlers() {
        if (!lightboxModalEl) {
          console.warn('‚ö†Ô∏è Modal element not found for close handlers');
          return;
        }
        
        console.log('üîß Setting up close handlers...');
        
        // Get modal content once at the top of the function
        const modalContent = lightboxModalEl.querySelector('.modal-content');
        
        // Get all close buttons (both X button and Close button)
        const closeButtons = lightboxModalEl.querySelectorAll('.btn-close, [data-bs-dismiss="modal"], button.btn-secondary');
        console.log('üìå Found', closeButtons.length, 'close buttons');
        
        // Use event delegation - more reliable than attaching to each button
        // This handles both existing and dynamically added buttons
        const handleCloseClick = function(e) {
          // Check if click is on a close button or inside one
          const target = e.target;
          const isCloseButton = target.classList.contains('btn-close') || 
                               target.closest('.btn-close') ||
                               target.classList.contains('btn-secondary') ||
                               (target.tagName === 'BUTTON' && target.textContent.trim() === 'Close') ||
                               target.closest('[data-bs-dismiss="modal"]');
          
          if (isCloseButton) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            console.log('üñ±Ô∏è  Close button clicked via delegation');
            closeLightbox();
            return false;
          }
        };
        
        // Attach delegation handler to modal content (better than individual buttons)
        if (modalContent) {
          modalContent.addEventListener('click', handleCloseClick, { capture: true });
          modalContent.addEventListener('touchend', function(e) {
            // Same logic for touch
            const target = e.target;
            const isCloseButton = target.classList.contains('btn-close') || 
                                 target.closest('.btn-close') ||
                                 target.classList.contains('btn-secondary') ||
                                 (target.tagName === 'BUTTON' && target.textContent.trim() === 'Close') ||
                                 target.closest('[data-bs-dismiss="modal"]');
            
            if (isCloseButton) {
              e.preventDefault();
              e.stopPropagation();
              e.stopImmediatePropagation();
              console.log('üëÜ Close button tapped via delegation');
              closeLightbox();
              return false;
            }
          }, { capture: true, passive: false });
        }
        
        // Also attach to individual buttons for extra reliability
        closeButtons.forEach((btn, index) => {
          if (btn.dataset.closeHandlerAttached === 'true') return;
          btn.dataset.closeHandlerAttached = 'true';
          
          console.log(`‚úÖ Attaching direct close handler to button ${index}`);
          
          // Click handler - use capture to catch early
          btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            console.log(`üñ±Ô∏è  Close button ${index} clicked (direct)`);
            closeLightbox();
            return false;
          }, { capture: true });
          
          // Touch handler for mobile - use capture
          let touchStartTime = 0;
          let touchMoved = false;
          
          btn.addEventListener('touchstart', function(e) {
            touchStartTime = Date.now();
            touchMoved = false;
          }, { passive: true });
          
          btn.addEventListener('touchmove', function() {
            touchMoved = true;
          }, { passive: true });
          
          btn.addEventListener('touchend', function(e) {
            if (!touchMoved && (Date.now() - touchStartTime) < 500) {
              e.preventDefault();
              e.stopPropagation();
              e.stopImmediatePropagation();
              console.log(`üëÜ Close button ${index} tapped (direct)`);
              closeLightbox();
              return false;
            }
          }, { passive: false, capture: true });
        });
        
        // Handle backdrop clicks - click outside modal to close
        const handleBackdropClick = function(e) {
          if (lightboxModalEl && lightboxModalEl.classList.contains('show')) {
            console.log('üñ±Ô∏è  Backdrop clicked - closing lightbox');
            e.preventDefault();
            e.stopPropagation();
            closeLightbox();
          }
        };
        
        // Click on backdrop element
        const backdropClickHandler = function(e) {
          const backdrop = document.querySelector('.modal-backdrop');
          if (backdrop && e.target === backdrop && lightboxModalEl.classList.contains('show')) {
            handleBackdropClick(e);
          }
        };
        
        document.addEventListener('click', backdropClickHandler, { capture: false });
        
        // Touch on backdrop (mobile)
        const backdropTouchHandler = function(e) {
          const backdrop = document.querySelector('.modal-backdrop');
          if (backdrop && e.target === backdrop && lightboxModalEl.classList.contains('show')) {
            e.preventDefault();
            handleBackdropClick(e);
          }
        };
        document.addEventListener('touchend', backdropTouchHandler, { passive: false });
        
        // Click on modal itself (outside content) to close
        const modalClickHandler = function(e) {
          // Only close if clicking directly on modal element (not dialog/content)
          if (e.target === lightboxModalEl && lightboxModalEl.classList.contains('show')) {
            console.log('üñ±Ô∏è  Modal background clicked - closing');
            e.preventDefault();
            e.stopPropagation();
            closeLightbox();
          }
        };
        lightboxModalEl.addEventListener('click', modalClickHandler, { capture: false });
        
        // Touch on modal itself (mobile)
        lightboxModalEl.addEventListener('touchend', function(e) {
          if (e.target === lightboxModalEl && lightboxModalEl.classList.contains('show')) {
            e.preventDefault();
            e.stopPropagation();
            console.log('üëÜ Modal background tapped - closing');
            closeLightbox();
          }
        }, { passive: false });
        
        // Prevent modal content clicks from closing (reuse modalContent from top of function)
        if (modalContent) {
          modalContent.addEventListener('click', function(e) {
            e.stopPropagation();
          }, false);
          
          modalContent.addEventListener('touchend', function(e) {
            e.stopPropagation();
          }, false);
        }
      }
      
      // Setup close handlers when ready
      if (lightboxModalEl) {
        setupCloseHandlers();
        // Re-setup after delays to catch dynamic content
        setTimeout(setupCloseHandlers, 500);
        setTimeout(setupCloseHandlers, 1000);
      }
      
      // Escape key to close
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && lightboxModalEl && lightboxModalEl.classList.contains('show')) {
          console.log('‚å®Ô∏è  Escape key pressed - closing lightbox');
          closeLightbox();
        }
      }, false);
      
      // Handle Bootstrap modal close events
      if (lightboxModalEl) {
        lightboxModalEl.addEventListener('hidden.bs.modal', function() {
          console.log('üîÑ Bootstrap modal hidden event - closing');
          closeLightbox();
        }, false);
      }

      // Make functions globally available for debugging
      window.openLightbox = openLightbox;
      window.closeLightbox = closeLightbox;
      
      console.log('Lightbox initialized - ready to use');

      // Helper function to show notifications
      function showNotification(message, type) {
        // Remove existing notifications
        const existingNotifications = document.querySelectorAll('.image-notification');
        existingNotifications.forEach(n => n.remove());

        const notification = document.createElement('div');
        notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show image-notification`;
        notification.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 10000; min-width: 300px;';
        notification.innerHTML = `
          <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        document.body.appendChild(notification);

        // Auto-remove after 3 seconds
        setTimeout(() => {
          notification.classList.remove('show');
          setTimeout(() => notification.remove(), 300);
        }, 3000);
      }

      // Image deletion with AJAX (no page reload)
      // Handle delete button clicks (using event delegation for dynamically added content)
      // Only add listener once by checking if it's already been set up
      if (!window.imageDeleteHandlerAdded) {
        window.imageDeleteHandlerAdded = true;
        
        document.addEventListener('click', async function(e) {
          const deleteBtn = e.target.closest('.delete-image-btn');
          if (!deleteBtn) return;

          e.preventDefault();
          e.stopPropagation();

          const imageId = deleteBtn.getAttribute('data-image-id');
          const jobId = deleteBtn.getAttribute('data-job-id');

          if (!imageId || !jobId) {
            console.error('Missing image ID or job ID');
            return;
          }

          // Confirm deletion
          if (!confirm('Are you sure you want to delete this image? This action cannot be undone.')) {
            return;
          }

          // Disable button and show loading state
          const originalHTML = deleteBtn.innerHTML;
          deleteBtn.disabled = true;
          deleteBtn.innerHTML = '<i class="bi bi-arrow-repeat spin"></i> Deleting...';

          try {
            // Send DELETE request via AJAX (using POST method as per route)
            const response = await fetch(`/jobs/${jobId}/images/${imageId}/delete`, {
              method: 'POST',
              headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Accept': 'application/json'
              },
              credentials: 'same-origin'
            });

            const data = await response.json();

            if (response.ok && data.success) {
              // Find the image card and remove it with animation
              const imageCard = deleteBtn.closest('.col-6, .col-md-4, .col-lg-3');
              if (imageCard) {
                // Add fade out animation
                imageCard.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
                imageCard.style.opacity = '0';
                imageCard.style.transform = 'scale(0.9)';
                
                // Remove from DOM after animation
                setTimeout(() => {
                  imageCard.remove();
                  
                  // Check if there are no more images
                  const imageGallery = document.getElementById('imageGallery');
                  if (imageGallery && imageGallery.children.length === 0) {
                    // Hide the entire image gallery section
                    const galleryCard = imageGallery.closest('.card');
                    if (galleryCard) {
                      galleryCard.style.transition = 'opacity 0.3s ease-out';
                      galleryCard.style.opacity = '0';
                      setTimeout(() => {
                        galleryCard.remove();
                      }, 300);
                    }
                  }
                }, 300);
              }

              // Show success message
              showNotification('Image deleted successfully', 'success');
            } else {
              throw new Error(data.error || 'Failed to delete image');
            }
          } catch (error) {
            console.error('Delete image error:', error);
            showNotification('Error deleting image: ' + error.message, 'error');
            
            // Re-enable button
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = originalHTML;
          }
        });
      }
  });

  // Job deletion with AJAX
  document.addEventListener('DOMContentLoaded', function() {
    const deleteJobBtn = document.getElementById('deleteJobBtn');
    
    if (deleteJobBtn) {
      deleteJobBtn.addEventListener('click', async function(e) {
        e.preventDefault();
        e.stopPropagation();

        const jobId = deleteJobBtn.getAttribute('data-job-id');
        if (!jobId) {
          console.error('Missing job ID');
          return;
        }

        // Confirm deletion
        if (!confirm('Are you sure you want to delete this job? This action cannot be undone. All associated data (images, activity logs, etc.) will also be deleted.')) {
          return;
        }

        // Disable button and show loading state
        const originalHTML = deleteJobBtn.innerHTML;
        deleteJobBtn.disabled = true;
        deleteJobBtn.innerHTML = '<i class="bi bi-arrow-repeat spin"></i> <span class="btn-text">Deleting...</span>';

        try {
          // Send DELETE request via AJAX
          const response = await fetch(`/jobs/${jobId}/delete`, {
            method: 'POST',
            headers: {
              'X-Requested-With': 'XMLHttpRequest',
              'Accept': 'application/json'
            },
            credentials: 'same-origin'
          });

          const data = await response.json();

          if (response.ok && data.success) {
            // Show success message
            alert('Job deleted successfully');
            // Redirect to jobs list
            window.location.href = '/jobs';
          } else {
            throw new Error(data.error || 'Failed to delete job');
          }
        } catch (error) {
          console.error('Delete job error:', error);
          alert('Error deleting job: ' + error.message);
          
          // Re-enable button
          deleteJobBtn.disabled = false;
          deleteJobBtn.innerHTML = originalHTML;
        }
      });
    }
  });
</script>

