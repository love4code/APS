<script>
  // Image upload with progress tracking
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('imageInput');
    const fileListDiv = document.getElementById('fileList');
    const uploadBtn = document.getElementById('uploadBtn');
    const imageUploadForm = document.getElementById('imageUploadForm');
    const MAX_FILE_SIZE = 10 * 1024 * 1024; // 10MB
    let selectedFiles = [];

    // Handle file selection
    if (fileInput && fileListDiv) {
      fileInput.addEventListener('change', function(e) {
        const files = Array.from(e.target.files);
        selectedFiles = [];
        const skippedFiles = [];
        
        // Filter and validate files
        files.forEach((file, index) => {
          if (file.size > MAX_FILE_SIZE) {
            // Track files that are too large
            skippedFiles.push({
              name: file.name,
              size: file.size,
              reason: 'too_large'
            });
            return;
          }
          if (!file.type.startsWith('image/')) {
            // Track non-image files
            skippedFiles.push({
              name: file.name,
              size: file.size,
              reason: 'not_image'
            });
            return;
          }
          selectedFiles.push({
            file: file,
            id: `file-${Date.now()}-${index}`,
            status: 'pending', // pending, uploading, success, error
            progress: 0
          });
        });

        // Show warning if files were skipped
        if (skippedFiles.length > 0) {
          const tooLarge = skippedFiles.filter(f => f.reason === 'too_large');
          const notImage = skippedFiles.filter(f => f.reason === 'not_image');
          let message = '';
          if (tooLarge.length > 0) {
            message += `${tooLarge.length} file(s) skipped (too large, max 10MB). `;
          }
          if (notImage.length > 0) {
            message += `${notImage.length} file(s) skipped (not an image). `;
          }
          if (message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-warning alert-dismissible fade show mt-2';
            alertDiv.innerHTML = `
              <i class="bi bi-exclamation-triangle"></i> ${message}
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            fileListDiv.parentElement.insertBefore(alertDiv, fileListDiv);
            setTimeout(() => {
              alertDiv.remove();
            }, 5000);
          }
        }

        renderFileList();
        updateUploadButton();
      });
    }

    // Render file list with progress bars
    function renderFileList() {
      if (selectedFiles.length === 0) {
        fileListDiv.innerHTML = '';
        return;
      }

      let html = '<div class="list-group">';
      selectedFiles.forEach(fileData => {
        const sizeMB = (fileData.file.size / (1024 * 1024)).toFixed(2);
        const statusClass = {
          'pending': 'secondary',
          'uploading': 'primary',
          'success': 'success',
          'error': 'danger'
        }[fileData.status] || 'secondary';
        
        const statusIcon = {
          'pending': 'bi-clock',
          'uploading': 'bi-arrow-repeat spin',
          'success': 'bi-check-circle',
          'error': 'bi-x-circle'
        }[fileData.status] || 'bi-clock';

        html += `
          <div class="list-group-item" id="${fileData.id}">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div class="flex-grow-1">
                <strong>${fileData.file.name}</strong>
                <small class="text-muted d-block">${sizeMB} MB</small>
              </div>
              <div>
                <span class="badge bg-${statusClass}">
                  <i class="bi ${statusIcon}"></i>
                  <span class="status-text">${fileData.status === 'pending' ? 'Ready' : fileData.status === 'uploading' ? 'Uploading...' : fileData.status === 'success' ? 'Uploaded' : 'Error'}</span>
                </span>
              </div>
            </div>
            ${fileData.status === 'uploading' || fileData.status === 'pending' ? `
              <div class="progress" style="height: 8px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-${statusClass}" 
                     role="progressbar" 
                     style="width: ${fileData.progress}%"
                     aria-valuenow="${fileData.progress}" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                </div>
              </div>
            ` : ''}
            ${fileData.status === 'error' ? `
              <small class="text-danger">${fileData.errorMessage || 'Upload failed'}</small>
            ` : ''}
          </div>
        `;
      });
      html += '</div>';
      fileListDiv.innerHTML = html;
    }

    // Update upload button state
    function updateUploadButton() {
      const hasPendingFiles = selectedFiles.some(f => f.status === 'pending');
      const isUploading = selectedFiles.some(f => f.status === 'uploading');
      uploadBtn.disabled = !hasPendingFiles || isUploading;
      if (isUploading) {
        uploadBtn.innerHTML = '<i class="bi bi-arrow-repeat spin"></i> Uploading...';
      } else {
        uploadBtn.innerHTML = '<i class="bi bi-upload"></i> Upload Images';
      }
    }

    // Upload files one by one
    uploadBtn.addEventListener('click', async function() {
      const pendingFiles = selectedFiles.filter(f => f.status === 'pending');
      if (pendingFiles.length === 0) return;

      uploadBtn.disabled = true;
      
      for (const fileData of pendingFiles) {
        await uploadFile(fileData);
      }

      // Refresh page after all uploads complete (or show success message)
      const allComplete = selectedFiles.every(f => f.status === 'success' || f.status === 'error');
      if (allComplete) {
        const successCount = selectedFiles.filter(f => f.status === 'success').length;
        if (successCount > 0) {
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        }
      }
    });

    // Upload individual file with progress tracking
    async function uploadFile(fileData) {
      fileData.status = 'uploading';
      fileData.progress = 0;
      renderFileList();
      updateUploadButton();

      const formData = new FormData();
      formData.append('images', fileData.file);

      return new Promise((resolve) => {
        const xhr = new XMLHttpRequest();

        // Track upload progress
        xhr.upload.addEventListener('progress', (e) => {
          if (e.lengthComputable) {
            fileData.progress = Math.round((e.loaded / e.total) * 100);
            renderFileList();
          }
        });

        // Handle completion
        xhr.addEventListener('load', () => {
          if (xhr.status === 200) {
            try {
              const response = JSON.parse(xhr.responseText);
              if (response.success) {
                fileData.status = 'success';
                fileData.progress = 100;
              } else {
                fileData.status = 'error';
                fileData.errorMessage = response.error || 'Upload failed';
              }
            } catch {
              // If response is not JSON, assume success (redirect response)
              fileData.status = 'success';
              fileData.progress = 100;
            }
          } else if (xhr.status === 302) {
            // Redirect response means success
            fileData.status = 'success';
            fileData.progress = 100;
          } else {
            fileData.status = 'error';
            try {
              const response = JSON.parse(xhr.responseText);
              fileData.errorMessage = response.error || 'Upload failed';
            } catch {
              fileData.errorMessage = `Upload failed (${xhr.status})`;
            }
          }
          renderFileList();
          updateUploadButton();
          resolve();
        });

        // Handle errors
        xhr.addEventListener('error', () => {
          fileData.status = 'error';
          fileData.errorMessage = 'Network error';
          renderFileList();
          updateUploadButton();
          resolve();
        });

        // Handle abort
        xhr.addEventListener('abort', () => {
          fileData.status = 'error';
          fileData.errorMessage = 'Upload cancelled';
          renderFileList();
          updateUploadButton();
          resolve();
        });

        // Send request
        xhr.open('POST', `/jobs/<%= job._id %>/images/upload`);
        xhr.send(formData);
      });
    }
    
    // Lightbox functionality - initialize after DOM and Bootstrap are ready
    let lightboxInitialized = false;
    let lightboxModal = null;
    
    function initLightbox() {
      // Prevent multiple initializations
      if (lightboxInitialized) {
        return;
      }

      // Wait for Bootstrap to be available
      if (typeof bootstrap === 'undefined' || !bootstrap.Modal) {
        setTimeout(initLightbox, 100);
        return;
      }

      const lightboxModalEl = document.getElementById('lightboxModal');
      if (!lightboxModalEl) {
        console.warn('Lightbox modal element not found');
        return;
      }

      // Initialize Bootstrap modal with backdrop click enabled
      try {
        lightboxModal = bootstrap.Modal.getOrCreateInstance(lightboxModalEl, {
          backdrop: true,
          keyboard: true,
          focus: true
        });
      } catch (e) {
        console.error('Error initializing Bootstrap modal:', e);
        try {
          lightboxModal = new bootstrap.Modal(lightboxModalEl, {
            backdrop: true,
            keyboard: true,
            focus: true
          });
        } catch (e2) {
          console.error('Failed to create Bootstrap modal:', e2);
          return;
        }
      }

      const lightboxImage = document.getElementById('lightboxImage');
      const lightboxTitle = document.getElementById('lightboxTitle');
      const lightboxDownloadLink = document.getElementById('lightboxDownloadLink');

      if (!lightboxImage || !lightboxTitle || !lightboxDownloadLink) {
        console.warn('Lightbox elements not found');
        return;
      }

      // Function to open lightbox
      function openLightbox(lightboxLink) {
        if (!lightboxModal) {
          console.warn('Lightbox modal not initialized');
          return;
        }
        
        const mediumPath = lightboxLink.getAttribute('data-medium');
        const largePath = lightboxLink.getAttribute('data-large');
        const img = lightboxLink.querySelector('img');
        const altText = img ? img.alt : 'Image';

        console.log('Opening lightbox:', { mediumPath, largePath, altText });

        if (mediumPath && largePath) {
          lightboxImage.src = mediumPath;
          lightboxImage.alt = altText;
          lightboxTitle.textContent = altText;
          lightboxDownloadLink.href = largePath;

          // Show modal
          try {
            lightboxModal.show();
            console.log('Modal show() called');
            
            // Mobile-specific fixes after modal is shown
            setTimeout(() => {
              // Ensure modal is on top on mobile
              if (window.innerWidth <= 767.98) {
                const backdrops = document.querySelectorAll('.modal-backdrop');
                backdrops.forEach(backdrop => {
                  backdrop.style.zIndex = '10050';
                  backdrop.style.pointerEvents = 'auto';
                });
                
                const modalDialog = lightboxModalEl.querySelector('.modal-dialog');
                const modalContent = lightboxModalEl.querySelector('.modal-content');
                
                if (modalDialog) {
                  modalDialog.style.zIndex = '10071';
                  modalDialog.style.position = 'relative';
                }
                
                if (modalContent) {
                  modalContent.style.zIndex = '10072';
                  modalContent.style.position = 'relative';
                  modalContent.style.pointerEvents = 'auto';
                }
                
                lightboxModalEl.style.zIndex = '10070';
                console.log('Mobile z-index fixes applied');
              }
            }, 150);
          } catch (err) {
            console.error('Error showing lightbox modal:', err);
          }
        } else {
          console.warn('Missing lightbox paths:', { mediumPath, largePath });
        }
      }

      // Handle clicks and touches on lightbox links
      // Use event delegation that works for both mouse and touch
      let touchStartTarget = null;
      
      // Track touch start to prevent double-firing
      document.addEventListener('touchstart', function(e) {
        const link = e.target.closest('.lightbox-link');
        if (link) {
          touchStartTarget = link;
          // Prevent default link behavior immediately
          e.preventDefault();
        }
      }, { passive: false });
      
      // Unified handler for both click and touch
      function handleLightboxTrigger(e) {
        // Find the lightbox link
        let lightboxLink = e.target.closest('.lightbox-link');
        
        // If clicking on image, get parent link
        if (!lightboxLink && (e.target.tagName === 'IMG' || e.target.classList.contains('thumbnail-img'))) {
          lightboxLink = e.target.closest('a.lightbox-link') || e.target.parentElement;
          if (lightboxLink && !lightboxLink.classList.contains('lightbox-link')) {
            lightboxLink = lightboxLink.closest('.lightbox-link');
          }
        }
        
        // For touch events, use the tracked target
        if (!lightboxLink && touchStartTarget) {
          lightboxLink = touchStartTarget;
          touchStartTarget = null;
        }
        
        if (lightboxLink) {
          console.log('Lightbox trigger detected:', {
            eventType: e.type,
            target: e.target.tagName,
            hasModal: !!lightboxModal,
            link: lightboxLink
          });
          
          if (lightboxModal) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            openLightbox(lightboxLink);
            return false;
          } else {
            console.warn('Lightbox modal not ready yet');
          }
        }
      }
      
      // Attach handlers - use capture phase to catch events early, and also bubble phase
      document.addEventListener('click', handleLightboxTrigger, true);
      document.addEventListener('click', handleLightboxTrigger, false);
      document.addEventListener('touchend', handleLightboxTrigger, true);
      document.addEventListener('touchend', handleLightboxTrigger, false);
      
      // Also attach directly to all existing lightbox links
      setTimeout(() => {
        const links = document.querySelectorAll('.lightbox-link');
        links.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            if (lightboxModal) {
              openLightbox(link);
            }
          }, true);
          link.addEventListener('touchend', function(e) {
            e.preventDefault();
            e.stopPropagation();
            if (lightboxModal) {
              openLightbox(link);
            }
          }, true);
        });
      }, 500);

      // Ensure escape key works
      document.addEventListener('keydown', function escapeHandler(e) {
        if (e.key === 'Escape' && lightboxModalEl.classList.contains('show') && lightboxModal) {
          lightboxModal.hide();
        }
      });

      // Prevent modal content clicks from closing the modal
      const modalContent = lightboxModalEl.querySelector('.modal-content');
      if (modalContent) {
        modalContent.addEventListener('click', function(e) {
          e.stopPropagation();
        });
      }

      // Function to close lightbox
      function closeLightbox() {
        if (lightboxModal) {
          try {
            lightboxModal.hide();
          } catch (err) {
            console.error('Error hiding lightbox modal:', err);
          }
        }
      }

      // Explicitly handle backdrop clicks (both click and touch for mobile)
      lightboxModalEl.addEventListener('click', function(e) {
        // Only close if clicking directly on the modal element (backdrop area)
        if (e.target === lightboxModalEl && lightboxModal) {
          e.preventDefault();
          e.stopPropagation();
          closeLightbox();
        }
      });
      
      // Handle touch events on backdrop for mobile
      lightboxModalEl.addEventListener('touchend', function(e) {
        if (e.target === lightboxModalEl && lightboxModal) {
          e.preventDefault();
          e.stopPropagation();
          closeLightbox();
        }
      }, { passive: false });

      // Also handle backdrop element clicks (Bootstrap creates this)
      document.addEventListener('click', function(e) {
        if (e.target.classList.contains('modal-backdrop') && 
            lightboxModalEl.classList.contains('show') && lightboxModal) {
          closeLightbox();
        }
      });
      
      // Handle touch events on Bootstrap backdrop for mobile
      document.addEventListener('touchend', function(e) {
        if (e.target.classList.contains('modal-backdrop') && 
            lightboxModalEl.classList.contains('show') && lightboxModal) {
          e.preventDefault();
          closeLightbox();
        }
      }, { passive: false });

      lightboxInitialized = true;
    }

    // Initialize lightbox when DOM is ready, but wait for Bootstrap
    function tryInitLightbox() {
      if (typeof bootstrap !== 'undefined' && bootstrap.Modal && document.getElementById('lightboxModal')) {
        initLightbox();
      } else {
        setTimeout(tryInitLightbox, 100);
      }
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        tryInitLightbox();
      });
    } else {
      tryInitLightbox();
    }
  });
</script>

