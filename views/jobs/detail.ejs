<%- include('../partials/header', { title: title }) %>

<div class="container-fluid">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <h1 class="h3 mb-0"><%= title %></h1>
    <div class="job-actions-container">
      <div class="d-flex gap-2 job-actions-scroll">
        <a href="/invoices/new?jobId=<%= job._id %>" class="btn btn-primary btn-mobile">
          <i class="bi bi-receipt"></i> <span class="btn-text">Create Invoice</span>
        </a>
        <a href="/jobs/<%= job._id %>/invoice" class="btn btn-outline-success btn-mobile" target="_blank">
          <i class="bi bi-file-pdf"></i> <span class="btn-text">Download PDF</span>
        </a>
        <% if (job.customer && job.customer.email) { %>
        <form action="/jobs/<%= job._id %>/invoice/send" method="POST" class="d-inline">
          <button type="submit" class="btn btn-success btn-mobile" onclick="return confirm('Send invoice to <%= job.customer.email %>?');">
            <i class="bi bi-envelope"></i> <span class="btn-text">Email PDF</span>
          </button>
        </form>
        <% } else { %>
        <button type="button" class="btn btn-success btn-mobile" disabled title="Customer email not available">
          <i class="bi bi-envelope"></i> <span class="btn-text">Email PDF</span>
        </button>
        <% } %>
        <a href="/jobs/<%= job._id %>/edit" class="btn btn-outline-primary btn-mobile">
          <i class="bi bi-pencil"></i> <span class="btn-text">Edit</span>
        </a>
        <button type="button" class="btn btn-outline-danger btn-mobile" id="deleteJobBtn" data-job-id="<%= job._id %>">
          <i class="bi bi-trash"></i> <span class="btn-text">Delete</span>
        </button>
        <a href="/jobs" class="btn btn-outline-secondary btn-mobile">
          <i class="bi bi-arrow-left"></i> <span class="btn-text">Back to Jobs</span>
        </a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Customer Information</h5>
          <p><strong>Name:</strong> <a href="/customers/<%= job.customer._id %>"><%= job.customer.name %></a></p>
          <p><strong>Phone:</strong> <%= job.customer.phone || 'N/A' %></p>
          <p><strong>Email:</strong> <%= job.customer.email || 'N/A' %></p>
          <p><strong>Address:</strong> <%= job.customer.address || 'N/A' %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Job Details</h5>
          <div class="row">
            <div class="col-md-6">
              <p><strong>Status:</strong> 
                <span class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary' %>">
                  <%= job.status %>
                </span>
              </p>
              <p><strong>Sold By:</strong> <%= job.soldByOwner ? 'Owner' : (job.salesRep ? job.salesRep.name : 'N/A') %></p>
              <p><strong>Installer:</strong> <%= job.installer ? job.installer.name : 'Not assigned' %></p>
              <p><strong>Store:</strong> <%= job.store ? job.store.name : 'No store selected' %></p>
            </div>
            <div class="col-md-6">
              <p><strong>Install Date:</strong> <%= job.installDate ? (() => { const d = new Date(job.installDate); return (d.getUTCMonth() + 1) + '/' + d.getUTCDate() + '/' + d.getUTCFullYear(); })() : 'Not scheduled' %></p>
              <p><strong>Pool Order Date:</strong> <%= job.orderDate ? (() => { const d = new Date(job.orderDate); return (d.getUTCMonth() + 1) + '/' + d.getUTCDate() + '/' + d.getUTCFullYear(); })() : 'Not ordered' %></p>
              <p><strong>Pool Delivery Date:</strong> <%= job.deliveryDate ? (() => { const d = new Date(job.deliveryDate); return (d.getUTCMonth() + 1) + '/' + d.getUTCDate() + '/' + d.getUTCFullYear(); })() : 'Not delivered' %></p>
              <p><strong>Invoiced Date:</strong> <%= (typeof job.invoicedDate !== 'undefined' && job.invoicedDate) ? (() => { const d = new Date(job.invoicedDate); return (d.getUTCMonth() + 1) + '/' + d.getUTCDate() + '/' + d.getUTCFullYear(); })() : 'Not invoiced' %></p>
              <p><strong>Created:</strong> <%= new Date(job.createdAt).toLocaleDateString() %></p>
              <p><strong>Created By:</strong> <%= job.createdBy ? job.createdBy.name : 'Unknown' %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Items</h5>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Product/Service</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                  <th>Taxable</th>
                  <th>Item Total</th>
                  <th>Tax (6.25%)</th>
                </tr>
              </thead>
              <tbody>
                <% if (job.items && job.items.length > 0) { %>
                  <% job.items.forEach(item => { %>
                    <% 
                      const itemTotal = (item.unitPrice || 0) * (item.quantity || 0);
                      const itemTax = item.isTaxable ? itemTotal * 0.0625 : 0;
                    %>
                    <tr>
                      <td><%= item.product ? item.product.name : 'Unknown' %></td>
                      <td><%= item.quantity %></td>
                      <td>$<%= (item.unitPrice || 0).toFixed(2) %></td>
                      <td>
                        <% if (item.isTaxable) { %>
                          <i class="bi bi-check-circle text-success"></i> Yes
                        <% } else { %>
                          <i class="bi bi-x-circle text-muted"></i> No
                        <% } %>
                      </td>
                      <td>$<%= itemTotal.toFixed(2) %></td>
                      <td>
                        <% if (item.isTaxable) { %>
                          <span class="text-success">$<%= itemTax.toFixed(2) %></span>
                        <% } else { %>
                          <span class="text-muted">$0.00</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center text-muted">No items</td>
                  </tr>
                <% } %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="5" class="text-end"><strong>Subtotal:</strong></td>
                  <td><strong>$<%= (job.subtotal || 0).toFixed(2) %></strong></td>
                </tr>
                <tr>
                  <td colspan="5" class="text-end"><strong>Total Tax (6.25%):</strong></td>
                  <td><strong>$<%= (job.taxTotal || 0).toFixed(2) %></strong></td>
                </tr>
                <% if (job.installCost && job.installCost > 0) { %>
                <tr>
                  <td colspan="5" class="text-end"><strong>Install Cost:</strong></td>
                  <td><strong>$<%= (job.installCost || 0).toFixed(2) %></strong></td>
                </tr>
                <% } %>
                <tr class="table-primary">
                  <td colspan="5" class="text-end"><strong>Grand Total:</strong></td>
                  <td><strong>$<%= (job.totalPrice || 0).toFixed(2) %></strong></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>

      <% if (job.notes) { %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Notes <small class="text-muted">(Not shown on invoice)</small></h5>
            <p class="text-muted"><%= job.notes %></p>
          </div>
        </div>
      <% } %>

      <% if (job.internalNotes) { %>
        <div class="card mb-4 border-warning">
          <div class="card-body">
            <h5 class="card-title">Internal Job Notes <small class="text-muted">(For your records only)</small></h5>
            <p class="text-muted"><%= job.internalNotes %></p>
          </div>
        </div>
      <% } %>

      <!-- Image Upload Section -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Upload Images</h5>
          <form id="imageUploadForm" onsubmit="return false;">
            <div class="mb-3">
              <input type="file" class="form-control" name="images" id="imageInput" accept="image/*" multiple>
              <small class="form-text text-muted">Supported formats: JPG, PNG, GIF. Max size per file: 10MB. Files larger than 10MB will be skipped. You can select multiple images at once.</small>
              <div id="fileList" class="mt-3"></div>
            </div>
            <button type="button" id="uploadBtn" class="btn btn-primary" disabled>
              <i class="bi bi-upload"></i> Upload Images
            </button>
            <a href="/jobs/<%= job._id %>/images" class="btn btn-outline-secondary">
              <i class="bi bi-images"></i> View Image Library
            </a>
          </form>
        </div>
      </div>


      <!-- Image Gallery Section -->
      <% if (images && images.length > 0) { %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Project Images</h5>
          <div class="row g-3" id="imageGallery">
            <% images.forEach(image => { %>
            <div class="col-6 col-md-4 col-lg-3">
              <div class="card">
                <% 
                  // Images are served from database via API route
                  const thumbUrl = `/jobs/${job._id}/images/${image._id}/thumbnail`;
                  const mediumUrl = `/jobs/${job._id}/images/${image._id}/medium`;
                  const largeUrl = `/jobs/${job._id}/images/${image._id}/large`;
                  // Add cache-busting query param for mobile browsers
                  const imageTimestamp = new Date(image.uploadedAt).getTime();
                  const thumbUrlWithCache = thumbUrl + '?v=' + imageTimestamp;
                  const mediumUrlWithCache = mediumUrl + '?v=' + imageTimestamp;
                  const largeUrlWithCache = largeUrl + '?v=' + imageTimestamp;
                %>
                <a href="#" class="lightbox-link" data-medium="<%= mediumUrlWithCache %>" data-large="<%= largeUrlWithCache %>" role="button" aria-label="View full size image">
                  <img src="<%= thumbUrlWithCache %>" class="card-img-top thumbnail-img" alt="<%= image.originalFilename || 'Image' %>" loading="lazy" data-image-id="<%= image._id %>" onerror="if (!this.dataset.errorHandled) { this.dataset.errorHandled = 'true'; const fallbackSrc = '<%= mediumUrlWithCache %>'; if (this.src !== fallbackSrc && !this.src.includes('/medium')) { this.src = fallbackSrc; } else { this.style.backgroundColor='#f0f0f0'; this.style.minHeight='200px'; this.style.display='flex'; this.style.alignItems='center'; this.style.justifyContent='center'; this.alt='Image not found'; this.onerror = null; const errorText = document.createElement('span'); errorText.textContent = 'Image not available'; errorText.style.color = '#999'; this.parentElement.appendChild(errorText); } }">
                </a>
                <div class="card-body p-2">
                  <p class="card-text small mb-1 text-truncate" title="<%= image.originalFilename %>">
                    <%= image.originalFilename %>
                  </p>
                  <p class="card-text small text-muted mb-1">
                    <small>Uploaded by <%= image.uploadedBy ? image.uploadedBy.name : 'Unknown' %></small>
                  </p>
                  <p class="card-text small text-muted mb-2">
                    <small><%= new Date(image.uploadedAt).toLocaleDateString() %></small>
                  </p>
                  <button type="button" class="btn btn-sm btn-danger delete-image-btn" data-image-id="<%= image._id %>" data-job-id="<%= job._id %>">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Payment Status</h5>
          <form action="/jobs/<%= job._id %>/payment" method="POST">
            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="isPaid" name="isPaid" <%= job.isPaid ? 'checked' : '' %> onchange="this.form.submit()">
                <label class="form-check-label" for="isPaid">Is Paid</label>
              </div>
            </div>
            <div class="mb-3">
              <label for="datePaid" class="form-label">Date Paid</label>
              <input type="date" class="form-control" id="datePaid" name="datePaid" value="<%= job.datePaid ? new Date(job.datePaid).toISOString().split('T')[0] : '' %>" onchange="this.form.submit()">
            </div>
          </form>
          <p class="text-muted small">
            <strong>Current Status:</strong> 
            <span class="badge bg-<%= job.isPaid ? 'success' : 'danger' %>">
              <%= job.isPaid ? 'Paid' : 'Unpaid' %>
            </span>
          </p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Update Status</h5>
          <form action="/jobs/<%= job._id %>/status" method="POST">
            <div class="mb-3">
              <select class="form-select" name="status" onchange="this.form.submit()">
                <option value="scheduled" <%= job.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                <option value="complete" <%= job.status === 'complete' ? 'selected' : '' %>>Complete</option>
                <option value="delivered" <%= job.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                <option value="undelivered" <%= job.status === 'undelivered' ? 'selected' : '' %>>Undelivered</option>
                <option value="delayed" <%= job.status === 'delayed' ? 'selected' : '' %>>Delayed</option>
              </select>
            </div>
          </form>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Record Payment</h5>
          <div class="d-grid gap-2">
            <% if (job.installer) { %>
            <a href="/payments/new?jobId=<%= job._id %>&recipientId=<%= job.installer._id %>&recipientType=installer" class="btn btn-sm btn-outline-success">
              <i class="bi bi-cash-coin"></i> Pay Installer
            </a>
            <% } %>
            <% if (job.salesRep) { %>
            <a href="/payments/new?jobId=<%= job._id %>&recipientId=<%= job.salesRep._id %>&recipientType=salesRep" class="btn btn-sm btn-outline-info">
              <i class="bi bi-cash-coin"></i> Pay Sales Rep
            </a>
            <% } %>
            <a href="/payments/new?jobId=<%= job._id %>" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-plus-circle"></i> Record Payment
            </a>
          </div>
        </div>
      </div>

      <% if (activities && activities.length > 0) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Activity History</h5>
            <div class="list-group list-group-flush">
              <% activities.forEach(activity => { %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between">
                    <div>
                      <strong><%= activity.user ? activity.user.name : 'Unknown' %></strong>
                      <div class="small text-muted"><%= activity.action %></div>
                    </div>
                    <small class="text-muted"><%= new Date(activity.createdAt).toLocaleString() %></small>
                  </div>
                  <% if (activity.details) { %>
                    <div class="small text-muted mt-1"><%= activity.details %></div>
                  <% } %>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Lightbox Modal -->
