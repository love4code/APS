  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark">
      <div class="modal-header border-secondary">
        <h5 class="modal-title text-white" id="lightboxTitle">Image</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <img id="lightboxImage" src="" alt="" class="img-fluid w-100" style="max-height: 80vh; object-fit: contain;">
      </div>
      <div class="modal-footer border-secondary">
        <a id="lightboxDownloadLink" href="" target="_blank" class="btn btn-outline-light">
          <i class="bi bi-download"></i> View Full Size
        </a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<style>
  .lightbox-link {
    text-decoration: none;
    display: block;
  }
  .lightbox-link:hover {
    opacity: 0.9;
  }
  #imageGallery .card {
    transition: transform 0.2s;
  }
  #imageGallery .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
