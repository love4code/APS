<%- include('../partials/header', { title: title || 'Jobs' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><%= title || 'All Jobs' %></h1>
    <a href="/jobs/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> New Job
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Status</th>
          <th>Payment</th>
          <th>Sold By</th>
          <th>Installer</th>
          <th>Install Date</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (jobs && jobs.length > 0) { %> <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.customer ? job.customer.name : 'Unknown' %></td>
          <td>
            <span
              class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delayed' ? 'warning' : job.status === 'delivered' ? 'info' : 'secondary' %>"
            >
              <%= job.status %>
            </span>
          </td>
          <td>
            <span class="badge bg-<%= job.isPaid ? 'success' : 'danger' %>">
              <%= job.isPaid ? 'Paid' : 'Unpaid' %>
            </span>
          </td>
          <td>
            <%= job.soldByOwner ? 'Owner' : (job.salesRep ? job.salesRep.name :
            'N/A') %>
          </td>
          <td><%= job.installer ? job.installer.name : 'Not assigned' %></td>
          <td>
            <%= job.installDate ? new Date(job.installDate).toLocaleDateString()
            : '-' %>
          </td>
          <td>$<%= (job.totalPrice || 0).toFixed(2) %></td>
          <td>
            <a
              href="/jobs/<%= job._id %>"
              class="btn btn-sm btn-outline-primary"
              >View</a
            >
            <a
              href="/jobs/<%= job._id %>/edit"
              class="btn btn-sm btn-outline-secondary"
              >Edit</a
            >
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="8" class="text-center text-muted">No jobs found</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
