<%- include('../partials/header', { title: customer ? 'Edit Customer' : 'New
Customer' }) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="h3 mb-4">
        <%= customer ? 'Edit Customer' : 'New Customer' %>
      </h1>

      <form
        method="POST"
        action="<%= customer ? `/customers/${customer._id}` : '/customers' %>"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Name *</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= customer ? customer.name : '' %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input
            type="tel"
            class="form-control"
            id="phone"
            name="phone"
            value="<%= customer ? customer.phone : '' %>"
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= customer ? customer.email : '' %>"
          />
        </div>

        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <textarea class="form-control" id="address" name="address" rows="2">
<%= customer ? customer.address : '' %></textarea
          >
        </div>

        <div class="mb-3">
          <label for="notes" class="form-label">Notes</label>
          <textarea class="form-control" id="notes" name="notes" rows="4">
<%= customer ? customer.notes : '' %></textarea
          >
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Save</button>
          <a
            href="<%= customer ? `/customers/${customer._id}` : '/customers' %>"
            class="btn btn-secondary"
            >Cancel</a
          >
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
