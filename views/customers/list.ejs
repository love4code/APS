<%- include('../partials/header', { title: 'Customers' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Customers</h1>
    <a href="/customers/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> New Customer
    </a>
  </div>

  <!-- Search Form -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" action="/customers" class="row g-3">
        <div class="col-md-10">
          <input
            type="text"
            class="form-control"
            name="search"
            placeholder="Search by name, email, phone, sales rep, or installer..."
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
          />
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Search
          </button>
        </div>
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
        <div class="col-12">
          <a href="/customers" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Clear Search
          </a>
          <span class="ms-2 text-muted">
            Showing <%= customers ? customers.length : 0 %> result(s) for "<%=
            searchQuery %>"
          </span>
        </div>
        <% } %>
      </form>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (customers && customers.length > 0) { %> <% customers.forEach(c =>
        { %>
        <tr>
          <td><a href="/customers/<%= c._id %>"><%= c.name %></a></td>
          <td><%= c.phone || '-' %></td>
          <td><%= c.email || '-' %></td>
          <td><%= c.address || '-' %></td>
          <td>
            <a
              href="/customers/<%= c._id %>"
              class="btn btn-sm btn-outline-primary"
              >View</a
            >
            <a
              href="/customers/<%= c._id %>/edit"
              class="btn btn-sm btn-outline-secondary"
              >Edit</a
            >
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="5" class="text-center text-muted">No customers found</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
