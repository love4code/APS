<%- include('../partials/header', { title: `Payment -
$${payment.amount.toFixed(2)}` }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Payment Details</h1>
    <div>
      <a
        href="/payments/<%= payment._id %>/edit"
        class="btn btn-outline-secondary me-2"
      >
        <i class="bi bi-pencil"></i> Edit Payment
      </a>
      <a href="/payments" class="btn btn-secondary">Back to Payments</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Payment Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p>
                <strong>Amount:</strong>
                <span class="h4 text-success"
                  >$<%= payment.amount.toFixed(2) %></span
                >
              </p>
              <p>
                <strong>Date Paid:</strong> <%= new
                Date(payment.datePaid).toLocaleDateString() %>
              </p>
              <p>
                <strong>Payment Method:</strong>
                <span class="badge bg-secondary">
                  <%= payment.paymentMethod.replace('_', ' ').replace(/\b\w/g, l
                  => l.toUpperCase()) %>
                </span>
              </p>
              <% if (payment.paymentMethod === 'check' && payment.checkNumber) { %>
              <p>
                <strong>Check Number:</strong> <%= payment.checkNumber %>
              </p>
              <% } %>
            </div>
            <div class="col-md-6">
              <p>
                <strong>Recipient:</strong>
                <% if (payment.recipientType === 'installer') { %>
                <a href="/installers/<%= payment.recipient._id %>">
                  <%= payment.recipient.name %>
                </a>
                <span class="badge bg-success ms-2">Installer</span>
                <% } else if (payment.recipientType === 'salesRep') { %>
                <a href="/sales-reps/<%= payment.recipient._id %>">
                  <%= payment.recipient.name %>
                </a>
                <span class="badge bg-info ms-2">Sales Rep</span>
                <% } else if (payment.recipientType === 'employee') { %>
                <a href="/employees/<%= payment.recipient._id %>">
                  <%= payment.recipient.firstName %> <%= payment.recipient.lastName %>
                </a>
                <span class="badge bg-warning ms-2">Employee</span>
                <% } else { %>
                <%= payment.recipient.name || (payment.recipient.firstName + ' ' + payment.recipient.lastName) %>
                <% } %>
              </p>
              <p>
                <strong>Recipient Email:</strong> <%= payment.recipient.email %>
              </p>
              <p>
                <strong>Recorded By:</strong> <%= payment.createdBy ?
                payment.createdBy.name : 'Unknown' %>
              </p>
              <p class="text-muted small">
                Created: <%= new Date(payment.createdAt).toLocaleString() %>
              </p>
            </div>
          </div>
          <% if (payment.notes) { %>
          <hr />
          <p><strong>Notes:</strong></p>
          <p class="text-muted"><%= payment.notes %></p>
          <% } %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Related Jobs</h5>
        </div>
        <div class="card-body">
          <% 
            // Get jobs from jobs array, or fall back to single job for backward compatibility
            let displayJobs = [];
            if (payment.jobs && payment.jobs.length > 0) {
              displayJobs = payment.jobs;
            } else if (payment.job) {
              displayJobs = [payment.job];
            }
          %>
          <% if (displayJobs.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Job #</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% displayJobs.forEach(job => { %>
                    <tr>
                      <td>
                        <a href="/jobs/<%= job._id %>">
                          Job #<%= job._id.toString().slice(-6) %>
                        </a>
                      </td>
                      <td>
                        <% if (job.customer) { %>
                        <a href="/customers/<%= job.customer._id %>">
                          <%= job.customer.name %>
                        </a>
                        <% } else { %> N/A <% } %>
                      </td>
                      <td>$<%= (job.totalPrice || 0).toFixed(2) %></td>
                      <td>
                        <span
                          class="badge bg-<%= job.status === 'complete' ? 'success' : job.status === 'delivered' ? 'info' : job.status === 'delayed' ? 'warning' : 'secondary' %>"
                        >
                          <%= job.status || 'N/A' %>
                        </span>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p><strong>Jobs:</strong> N/A</p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">Danger Zone</h5>
        </div>
        <div class="card-body">
          <form
            action="/payments/<%= payment._id %>/delete"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete this payment? This cannot be undone.');"
          >
            <button type="submit" class="btn btn-danger w-100">
              <i class="bi bi-trash"></i> Delete Payment
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
