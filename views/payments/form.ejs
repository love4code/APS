<%- include('../partials/header', { title: payment ? 'Edit Payment' : 'Record Payment' }) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="h3 mb-4"><%= payment ? 'Edit Payment' : 'Record Payment' %></h1>

      <form method="POST" action="<%= payment ? `/payments/${payment._id}` : '/payments' %>" onsubmit="return validateJobsSelection()">
        <div class="mb-3">
          <label class="form-label">Jobs<% if (!fromEmployeePage) { %> *<% } %></label>
          <div class="jobs-select-container">
            <div class="jobs-select-header d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">
                <span id="selectedJobsCount">0</span> job(s) selected
              </span>
              <div>
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAllJobs()">Select All</button>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearAllJobs()">Clear All</button>
              </div>
            </div>
            <div class="jobs-select-wrapper border rounded p-2" style="max-height: 300px; overflow-y: auto; background-color: #f8f9fa;">
              <% jobs.forEach(job => { 
                let isSelected = false;
                if (payment && payment.jobs && payment.jobs.length > 0) {
                  isSelected = payment.jobs.some(pj => pj._id && pj._id.toString() === job._id.toString());
                } else if (payment && payment.job && payment.job._id && payment.job._id.toString() === job._id.toString()) {
                  isSelected = true;
                } else if (selectedJob && selectedJob._id && selectedJob._id.toString() === job._id.toString()) {
                  isSelected = true;
                }
                
                // Get status badge color
                let statusBadgeClass = 'secondary';
                if (job.status === 'complete') statusBadgeClass = 'success';
                else if (job.status === 'delivered') statusBadgeClass = 'info';
                else if (job.status === 'delayed') statusBadgeClass = 'warning';
                else if (job.status === 'undelivered') statusBadgeClass = 'danger';
              %>
                <div class="job-option-item p-2 mb-2 rounded border <%= isSelected ? 'bg-light border-primary' : 'bg-white' %>" 
                     style="cursor: pointer; transition: all 0.2s;"
                     onclick="toggleJobSelection('<%= job._id %>', this)">
                  <div class="form-check d-flex align-items-start">
                    <input class="form-check-input job-checkbox mt-1" 
                           type="checkbox" 
                           name="jobs" 
                           value="<%= job._id %>" 
                           id="job_<%= job._id %>"
                           <%= isSelected ? 'checked' : '' %>
                           onchange="updateSelectedCount()">
                    <label class="form-check-label flex-grow-1 ms-2" for="job_<%= job._id %>" style="cursor: pointer;">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <strong class="text-primary">Job #<%= job._id.toString().slice(-6) %></strong>
                          <div class="mt-1">
                            <span class="text-muted">Customer:</span> 
                            <strong><%= job.customer ? job.customer.name : 'Unknown' %></strong>
                          </div>
                          <div class="mt-1 small">
                            <span class="text-muted">Amount:</span> 
                            <strong class="text-success">$<%= (job.totalPrice || 0).toFixed(2) %></strong>
                            <% if (job.installer) { %>
                              <span class="ms-2 text-muted">â€¢ Installer: <%= job.installer.name %></span>
                            <% } %>
                          </div>
                        </div>
                        <div class="ms-3">
                          <span class="badge bg-<%= statusBadgeClass %>">
                            <%= job.status || 'N/A' %>
                          </span>
                        </div>
                      </div>
                    </label>
                  </div>
                </div>
              <% }) %>
              <% if (jobs.length === 0) { %>
                <div class="text-center text-muted p-3">No jobs available</div>
              <% } %>
            </div>
            <small class="form-text text-muted mt-2">
              <i class="bi bi-info-circle"></i> Click on a job to select/deselect it. You can select multiple jobs for this payment.
            </small>
          </div>
        </div>

        <div class="mb-3">
          <label for="recipientType" class="form-label">Payment To *</label>
          <select class="form-select" id="recipientType" name="recipientType" required onchange="updateRecipientOptions()">
            <option value="">Select type...</option>
            <option value="installer"<% if ((payment && payment.recipientType === 'installer') || recipientType === 'installer') { %> selected<% } %>>Installer</option>
            <option value="salesRep"<% if ((payment && payment.recipientType === 'salesRep') || recipientType === 'salesRep') { %> selected<% } %>>Sales Rep</option>
            <option value="employee"<% if ((payment && payment.recipientType === 'employee') || recipientType === 'employee') { %> selected<% } %>>Employee</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="recipient" class="form-label">Recipient *</label>
          <select class="form-select" id="recipient" name="recipient" required>
            <option value="">Select recipient...</option>
            <!-- Installers -->
            <optgroup label="Installers" id="installerGroup" style="display: none;">
              <% if (installers && installers.length > 0) { %>
                <% installers.forEach(installer => { %>
                  <option value="<%= installer._id %>"<% if ((payment && payment.recipientType === 'installer' && payment.recipient && payment.recipient._id.toString() === installer._id.toString()) || (selectedRecipient && selectedRecipient._id.toString() === installer._id.toString() && recipientType === 'installer')) { %> selected<% } %>><%= installer.name %></option>
                <% }) %>
              <% } %>
            </optgroup>
            <!-- Sales Reps -->
            <optgroup label="Sales Reps" id="salesRepGroup" style="display: none;">
              <% if (salesReps && salesReps.length > 0) { %>
                <% salesReps.forEach(rep => { %>
                  <option value="<%= rep._id %>"<% if ((payment && payment.recipientType === 'salesRep' && payment.recipient && payment.recipient._id.toString() === rep._id.toString()) || (selectedRecipient && selectedRecipient._id.toString() === rep._id.toString() && recipientType === 'salesRep')) { %> selected<% } %>><%= rep.name %></option>
                <% }) %>
              <% } %>
            </optgroup>
            <!-- Employees -->
            <optgroup label="Employees" id="employeeGroup" style="display: none;">
              <% if (employees && employees.length > 0) { %>
                <% employees.forEach(employee => { %>
                  <option value="<%= employee._id %>"<% if ((payment && payment.recipientType === 'employee' && payment.recipient && payment.recipient._id.toString() === employee._id.toString()) || (selectedRecipient && selectedRecipient._id.toString() === employee._id.toString() && recipientType === 'employee')) { %> selected<% } %>><%= employee.firstName %> <%= employee.lastName %></option>
                <% }) %>
              <% } %>
            </optgroup>
          </select>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="amount" class="form-label">Amount *</label>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <input type="number" class="form-control" id="amount" name="amount" 
                step="0.01" min="0" 
                value="<%= payment ? payment.amount.toFixed(2) : (weeklyTotal ? weeklyTotal.toFixed(2) : '') %>" 
                required>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="datePaid" class="form-label">Date Paid *</label>
            <input type="date" class="form-control" id="datePaid" name="datePaid" 
              value="<%= payment ? new Date(payment.datePaid).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>" 
              required>
          </div>
        </div>

        <div class="mb-3">
          <label for="paymentMethod" class="form-label">Payment Method</label>
          <select class="form-select" id="paymentMethod" name="paymentMethod" onchange="toggleCheckNumber()">
            <option value="cash"<% if (payment && payment.paymentMethod === 'cash') { %> selected<% } %>>Cash</option>
            <option value="check"<% if (payment && payment.paymentMethod === 'check') { %> selected<% } %>>Check</option>
            <option value="bank_transfer"<% if (payment && payment.paymentMethod === 'bank_transfer') { %> selected<% } %>>Bank Transfer</option>
            <option value="other"<% if (payment && payment.paymentMethod === 'other') { %> selected<% } %>>Other</option>
          </select>
        </div>

        <div class="mb-3" id="checkNumberGroup" style="display: none;">
          <label for="checkNumber" class="form-label">Check Number</label>
          <input type="text" class="form-control" id="checkNumber" name="checkNumber" 
            value="<%= payment && payment.checkNumber ? payment.checkNumber : '' %>" 
            placeholder="Enter check number">
        </div>

        <div class="mb-3">
          <label for="notes" class="form-label">Notes</label>
          <textarea class="form-control" id="notes" name="notes" rows="3"><%= payment ? payment.notes : '' %></textarea>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Save Payment</button>
          <a href="/payments" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function updateRecipientOptions() {
    const type = document.getElementById('recipientType').value
    const installerGroup = document.getElementById('installerGroup')
    const salesRepGroup = document.getElementById('salesRepGroup')
    const employeeGroup = document.getElementById('employeeGroup')
    const recipientSelect = document.getElementById('recipient')
    
    // Hide all options first
    installerGroup.style.display = 'none'
    salesRepGroup.style.display = 'none'
    employeeGroup.style.display = 'none'
    
    // Show relevant group
    if (type === 'installer') {
      installerGroup.style.display = 'block'
    } else if (type === 'salesRep') {
      salesRepGroup.style.display = 'block'
    } else if (type === 'employee') {
      employeeGroup.style.display = 'block'
    }
    
    // Reset selection
    recipientSelect.value = ''
  }
  
  function toggleCheckNumber() {
    const paymentMethod = document.getElementById('paymentMethod').value
    const checkNumberGroup = document.getElementById('checkNumberGroup')
    const checkNumberInput = document.getElementById('checkNumber')
    
    if (paymentMethod === 'check') {
      checkNumberGroup.style.display = 'block'
      checkNumberInput.removeAttribute('disabled')
    } else {
      checkNumberGroup.style.display = 'none'
      checkNumberInput.setAttribute('disabled', 'disabled')
      // Clear check number if not check payment
      if (paymentMethod !== 'check') {
        checkNumberInput.value = ''
      }
    }
  }
  
  function updateSelectedCount() {
    const checkboxes = document.querySelectorAll('.job-checkbox:checked')
    const countElement = document.getElementById('selectedJobsCount')
    if (countElement) {
      countElement.textContent = checkboxes.length
    }
  }
  
  function toggleJobSelection(jobId, element) {
    const checkbox = document.getElementById('job_' + jobId)
    if (checkbox) {
      checkbox.checked = !checkbox.checked
      updateSelectedCount()
      
      // Update visual state
      if (checkbox.checked) {
        element.classList.add('bg-light', 'border-primary')
        element.classList.remove('bg-white')
      } else {
        element.classList.remove('bg-light', 'border-primary')
        element.classList.add('bg-white')
      }
    }
  }
  
  function selectAllJobs() {
    const checkboxes = document.querySelectorAll('.job-checkbox')
    const items = document.querySelectorAll('.job-option-item')
    checkboxes.forEach(cb => cb.checked = true)
    items.forEach(item => {
      item.classList.add('bg-light', 'border-primary')
      item.classList.remove('bg-white')
    })
    updateSelectedCount()
  }
  
  function clearAllJobs() {
    const checkboxes = document.querySelectorAll('.job-checkbox')
    const items = document.querySelectorAll('.job-option-item')
    checkboxes.forEach(cb => cb.checked = false)
    items.forEach(item => {
      item.classList.remove('bg-light', 'border-primary')
      item.classList.add('bg-white')
    })
    updateSelectedCount()
  }
  
  function validateJobsSelection() {
    const checkboxes = document.querySelectorAll('.job-checkbox:checked')
    if (checkboxes.length === 0 && !document.getElementById('fromEmployeePage')) {
      alert('Please select at least one job for this payment.')
      return false
    }
    return true
  }
  
  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateRecipientOptions()
    toggleCheckNumber()
    updateSelectedCount() // Initialize selected count
    
    // Auto-populate employee if coming from employee page
    <% if (fromEmployeePage && selectedRecipient && selectedRecipientType === 'employee') { %>
      const recipientTypeSelect = document.getElementById('recipientType')
      const recipientSelect = document.getElementById('recipient')
      
      // Set recipient type to employee
      if (recipientTypeSelect) {
        recipientTypeSelect.value = 'employee'
        updateRecipientOptions()
        
        // Set the employee after a short delay to ensure options are loaded
        setTimeout(() => {
          if (recipientSelect) {
            recipientSelect.value = '<%= selectedRecipient._id %>'
          }
        }, 100)
      }
    <% } else { %>
      // If recipientType is pre-selected, make sure the correct group is shown
      const recipientTypeSelect = document.getElementById('recipientType')
      if (recipientTypeSelect && recipientTypeSelect.value) {
        updateRecipientOptions()
      }
    <% } %>
    
    // If coming from installer page, filter jobs to show only that installer's jobs
    <% if (selectedRecipient && recipientType === 'installer') { %>
      // Jobs are already filtered in the controller, but we can add visual indication
      const recipientSelect = document.getElementById('recipient')
      if (recipientSelect) {
        recipientSelect.value = '<%= selectedRecipient._id %>'
        updateRecipientOptions()
      }
    <% } %>
    
    // Add hover effects to job items
    document.querySelectorAll('.job-option-item').forEach(item => {
      item.addEventListener('mouseenter', function() {
        if (!this.querySelector('.job-checkbox').checked) {
          this.style.backgroundColor = '#e9ecef'
        }
      })
      item.addEventListener('mouseleave', function() {
        if (!this.querySelector('.job-checkbox').checked) {
          this.style.backgroundColor = '#fff'
        }
      })
    })
  })
</script>

<%- include('../partials/footer') %>

