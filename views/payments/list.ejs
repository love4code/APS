<%- include('../partials/header', { title: 'Payments' }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Payments</h1>
    <a href="/payments/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Record Payment
    </a>
  </div>

  <!-- Totals Summary -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Total Payments</h5>
          <h2 class="mb-0">$<%= totals.total.toFixed(2) %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success text-white">
        <div class="card-body">
          <h5 class="card-title">To Installers</h5>
          <h2 class="mb-0">$<%= totals.toInstallers.toFixed(2) %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-info text-white">
        <div class="card-body">
          <h5 class="card-title">To Sales Reps</h5>
          <h2 class="mb-0">$<%= totals.toSalesReps.toFixed(2) %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Payments Table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Recipient</th>
              <th>Type</th>
              <th>Job</th>
              <th>Customer</th>
              <th>Amount</th>
              <th>Method</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (payments && payments.length > 0) { %>
              <% payments.forEach(payment => { %>
                <tr>
                  <td><%= new Date(payment.datePaid).toLocaleDateString() %></td>
                  <td>
                    <% if (payment.recipientType === 'installer') { %>
                      <a href="/installers/<%= payment.recipient._id %>">
                        <%= payment.recipient.name %>
                      </a>
                    <% } else { %>
                      <a href="/sales-reps/<%= payment.recipient._id %>">
                        <%= payment.recipient.name %>
                      </a>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge bg-<%= payment.recipientType === 'installer' ? 'success' : 'info' %>">
                      <%= payment.recipientType === 'installer' ? 'Installer' : 'Sales Rep' %>
                    </span>
                  </td>
                  <td>
                    <a href="/jobs/<%= payment.job._id %>">
                      Job #<%= payment.job._id.toString().slice(-6) %>
                    </a>
                  </td>
                  <td>
                    <% if (payment.job.customer) { %>
                      <a href="/customers/<%= payment.job.customer._id %>">
                        <%= payment.job.customer.name %>
                      </a>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                  <td><strong>$<%= payment.amount.toFixed(2) %></strong></td>
                  <td>
                    <span class="badge bg-secondary">
                      <%= payment.paymentMethod.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                    </span>
                  </td>
                  <td>
                    <a href="/payments/<%= payment._id %>" class="btn btn-sm btn-outline-primary">View</a>
                    <a href="/payments/<%= payment._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="8" class="text-center text-muted">No payments recorded</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

